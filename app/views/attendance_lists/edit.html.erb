<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Edit Attendance List: <%= @attendance_list.title %></h1>

  <%= form_with(model: @attendance_list, class: "bg-white p-6 rounded-lg shadow-md") do |form| %>
    <% if @attendance_list.errors.any? %>
      <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
        <p class="font-bold"><%= pluralize(@attendance_list.errors.count, "error") %> prohibited this attendance list from being saved:</p>
        <ul class="list-disc ml-5 mt-2">
          <% @attendance_list.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_area :description, rows: 4, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-6">
      <%= form.label :date, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.date_field :date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Update Attendance List", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer transition duration-200" %>
      <%= link_to 'Show List Details', attendance_list_path(@attendance_list), class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
      <%= link_to 'Back to Lists', attendance_lists_path, class: "inline-block align-baseline font-bold text-sm text-gray-500 hover:text-gray-800 ml-4" %>
    </div>
  <% end %>
</div>