<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">My Assignments</h1>
    <p class="text-sm text-gray-600 mt-2">Track your assignments, submissions, and grades</p>
  </div>

  <!-- Statistics Cards -->
  <% 
    user_submissions = current_user.submissions.includes(:assignment)
    total_assignments = @assignments.count
    pending_assignments = @assignments.select { |a| !user_submissions.map(&:assignment_id).include?(a.id) }.count
    submitted_assignments = user_submissions.count
    graded_assignments = user_submissions.graded.count
    
    graded_submissions = user_submissions.graded
    average_grade = if graded_submissions.any?
      grades_with_points = graded_submissions.map { |s| s.percentage_grade }
      (grades_with_points.sum / grades_with_points.count)
    else
      nil
    end
  %>

  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <!-- Total Assignments -->
    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-blue-500">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Assignments</dt>
              <dd class="text-2xl font-semibold text-gray-900" id="stat-total"><%= total_assignments %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Pending -->
    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-yellow-500">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Pending</dt>
              <dd class="text-2xl font-semibold text-gray-900" id="stat-pending"><%= pending_assignments %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Submitted -->
    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-green-500">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Submitted</dt>
              <dd class="text-2xl font-semibold text-gray-900" id="stat-submitted"><%= submitted_assignments %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Average Grade -->
    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-purple-500">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Average Grade</dt>
              <dd class="text-2xl font-semibold text-gray-900" id="stat-average">
                <%= average_grade.present? ? "#{average_grade.round(1)}%" : 'N/A' %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters Section -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <!-- Search -->
      <div>
        <label for="search-input" class="block text-sm font-medium text-gray-700 mb-2">Search</label>
        <input type="text" id="search-input" placeholder="Search by title or course..." class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
      </div>

      <!-- Category Filter -->
      <div>
        <label for="category-filter" class="block text-sm font-medium text-gray-700 mb-2">Category</label>
        <select id="category-filter" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
          <option value="">All Categories</option>
          <option value="homework">Homework</option>
          <option value="project">Project</option>
          <option value="quiz">Quiz</option>
          <option value="exam">Exam</option>
        </select>
      </div>

      <!-- Status Filter -->
      <div>
        <label for="status-filter" class="block text-sm font-medium text-gray-700 mb-2">Status</label>
        <select id="status-filter" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
          <option value="">All Status</option>
          <option value="upcoming">Upcoming</option>
          <option value="overdue">Overdue</option>
          <option value="submitted">Submitted</option>
          <option value="graded">Graded</option>
          <option value="pending">Not Submitted</option>
        </select>
      </div>

      <!-- Sort -->
      <div>
        <label for="sort-select" class="block text-sm font-medium text-gray-700 mb-2">Sort By</label>
        <select id="sort-select" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
          <option value="due-soon">Due Date (Soonest)</option>
          <option value="due-late">Due Date (Latest)</option>
          <option value="newest">Newest First</option>
          <option value="oldest">Oldest First</option>
          <option value="title-az">Title A-Z</option>
          <option value="title-za">Title Z-A</option>
          <option value="course-az">Course A-Z</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Assignments Grid -->
  <% if @assignments.any? %>
    <div id="assignments-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @assignments.each do |assignment| %>
        <% 
          user_submission = user_submissions.find { |s| s.assignment_id == assignment.id }
          is_overdue = assignment.overdue?
          is_upcoming = !is_overdue && assignment.due_date > Time.current
          has_submitted = user_submission.present?
          is_graded = user_submission&.status == 'graded'
        %>
        
        <div class="assignment-card bg-white rounded-lg shadow hover:shadow-lg transition overflow-hidden"
             data-title="<%= assignment.title.downcase %>"
             data-course="<%= assignment.course_name.downcase %>"
             data-category="<%= assignment.category %>"
             data-status="<%= is_graded ? 'graded' : (has_submitted ? 'submitted' : (is_overdue ? 'overdue' : 'upcoming')) %>"
             data-due-date="<%= assignment.due_date.to_i %>"
             data-created-at="<%= assignment.created_at.to_i %>">
          
          <!-- Card Header with Status -->
          <div class="p-4 border-b border-gray-200">
            <div class="flex items-start justify-between mb-2">
              <h3 class="text-lg font-semibold text-gray-900 flex-1">
                <%= link_to assignment.title, assignment_path(assignment), class: "hover:text-blue-600" %>
              </h3>
              <% if is_overdue && !has_submitted %>
                <span class="ml-2 flex-shrink-0 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                  </svg>
                  Overdue
                </span>
              <% elsif is_graded %>
                <span class="ml-2 flex-shrink-0 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                  <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  Graded
                </span>
              <% elsif has_submitted %>
                <span class="ml-2 flex-shrink-0 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  Submitted
                </span>
              <% end %>
            </div>
            
            <p class="text-sm text-gray-600"><%= assignment.course_name %></p>
          </div>

          <!-- Card Body -->
          <div class="p-4">
            <div class="space-y-3">
              <!-- Category and Points -->
              <div class="flex items-center justify-between">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                  <%= case assignment.category
                      when 'homework' then 'bg-blue-100 text-blue-800'
                      when 'project' then 'bg-purple-100 text-purple-800'
                      when 'quiz' then 'bg-yellow-100 text-yellow-800'
                      when 'exam' then 'bg-red-100 text-red-800'
                      end %>">
                  <%= assignment.category.titleize %>
                </span>
                <span class="text-sm font-medium text-gray-900"><%= assignment.points %> pts</span>
              </div>

              <!-- Due Date -->
              <div class="flex items-center text-sm text-gray-600">
                <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <div>Due: <%= assignment.due_date.strftime("%b %d, %Y") %></div>
                  <div class="text-xs text-gray-500"><%= assignment.due_date.strftime("%I:%M %p") %></div>
                </div>
              </div>

              <!-- Grade Display (if graded) -->
              <% if is_graded && user_submission.grade.present? %>
                <div class="pt-3 border-t border-gray-200">
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-600">Your Grade:</span>
                    <div class="text-right">
                      <div class="text-lg font-bold text-purple-600">
                        <%= user_submission.grade %>/<%= assignment.points %>
                      </div>
                      <div class="text-xs text-gray-500">
                        <%= user_submission.percentage_grade.round(1) %>% (<%= user_submission.letter_grade %>)
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>

              <!-- Submission Status -->
              <% if has_submitted %>
                <div class="pt-3 border-t border-gray-200 text-xs text-gray-500">
                  Submitted: <%= user_submission.submitted_at.strftime("%b %d at %I:%M %p") %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Card Footer with Actions -->
          <div class="px-4 py-3 bg-gray-50 border-t border-gray-200">
            <% if has_submitted %>
              <%= link_to assignment_submission_path(assignment, user_submission), class: "block w-full text-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
                View Submission
              <% end %>
            <% elsif is_overdue %>
              <%= link_to assignment_path(assignment), class: "block w-full text-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
                View Details
              <% end %>
            <% else %>
              <%= link_to new_assignment_submission_path(assignment), class: "block w-full text-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700" do %>
                Submit Assignment
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- No Results Message -->
    <div id="no-results" class="hidden text-center py-12 bg-white rounded-lg shadow">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No assignments found</h3>
      <p class="mt-1 text-sm text-gray-500">Try adjusting your search or filter criteria.</p>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No assignments available</h3>
      <p class="text-gray-500">Check back later for new assignments from your teachers.</p>
    </div>
  <% end %>
</div>

<!-- Filtering and Sorting JavaScript -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search-input');
    const categoryFilter = document.getElementById('category-filter');
    const statusFilter = document.getElementById('status-filter');
    const sortSelect = document.getElementById('sort-select');
    const assignmentsGrid = document.getElementById('assignments-grid');
    const noResults = document.getElementById('no-results');
    const statTotal = document.getElementById('stat-total');
    const statPending = document.getElementById('stat-pending');
    const statSubmitted = document.getElementById('stat-submitted');

    if (!assignmentsGrid) return; // Exit if no assignments

    const allCards = Array.from(document.querySelectorAll('.assignment-card'));

    function filterAndSort() {
      const searchTerm = searchInput.value.toLowerCase().trim();
      const categoryValue = categoryFilter.value;
      const statusValue = statusFilter.value;
      const sortValue = sortSelect.value;

      // Filter cards
      let visibleCards = allCards.filter(card => {
        const title = card.dataset.title || '';
        const course = card.dataset.course || '';
        const category = card.dataset.category || '';
        const status = card.dataset.status || '';

        // Search filter (title or course)
        if (searchTerm && !title.includes(searchTerm) && !course.includes(searchTerm)) {
          return false;
        }

        // Category filter
        if (categoryValue && category !== categoryValue) {
          return false;
        }

        // Status filter
        if (statusValue) {
          if (statusValue === 'pending' && (status === 'submitted' || status === 'graded')) {
            return false;
          }
          if (statusValue !== 'pending' && status !== statusValue) {
            return false;
          }
        }

        return true;
      });

      // Sort cards
      visibleCards.sort((a, b) => {
        switch (sortValue) {
          case 'due-soon':
            return parseInt(a.dataset.dueDate) - parseInt(b.dataset.dueDate);
          case 'due-late':
            return parseInt(b.dataset.dueDate) - parseInt(a.dataset.dueDate);
          case 'newest':
            return parseInt(b.dataset.createdAt) - parseInt(a.dataset.createdAt);
          case 'oldest':
            return parseInt(a.dataset.createdAt) - parseInt(b.dataset.createdAt);
          case 'title-az':
            return a.dataset.title.localeCompare(b.dataset.title);
          case 'title-za':
            return b.dataset.title.localeCompare(a.dataset.title);
          case 'course-az':
            return a.dataset.course.localeCompare(b.dataset.course);
          default:
            return 0;
        }
      });

      // Hide all cards
      allCards.forEach(card => card.style.display = 'none');

      // Show and reorder visible cards
      visibleCards.forEach(card => {
        card.style.display = '';
        assignmentsGrid.appendChild(card);
      });

      // Update statistics
      updateStats(visibleCards);

      // Show/hide no results message
      if (visibleCards.length === 0) {
        assignmentsGrid.style.display = 'none';
        noResults.classList.remove('hidden');
      } else {
        assignmentsGrid.style.display = '';
        noResults.classList.add('hidden');
      }
    }

    function updateStats(visibleCards) {
      const total = visibleCards.length;
      let pending = 0;
      let submitted = 0;

      visibleCards.forEach(card => {
        const status = card.dataset.status;
        if (status === 'upcoming' || status === 'overdue') {
          pending++;
        }
        if (status === 'submitted' || status === 'graded') {
          submitted++;
        }
      });

      statTotal.textContent = total;
      statPending.textContent = pending;
      statSubmitted.textContent = submitted;
    }

    // Attach event listeners
    if (searchInput) {
      searchInput.addEventListener('input', filterAndSort);
    }
    if (categoryFilter) {
      categoryFilter.addEventListener('change', filterAndSort);
    }
    if (statusFilter) {
      statusFilter.addEventListener('change', filterAndSort);
    }
    if (sortSelect) {
      sortSelect.addEventListener('change', filterAndSort);
    }
  });
</script>
