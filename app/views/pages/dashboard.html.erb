              <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div class="text-3xl font-bold text-gray-900 mb-1"><%= @pending_assignments %></div>
            <div class="text-sm text-gray-600 font-medium">Pending Submissions</div>
            <div class="mt-2 text-xs text-yellow-600">
              <%= link_to 'Submit now â†’', assignments_path, class: 'hover:underline' %>
            </div>
          </div>

          <!-- Submitted Assignments -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-purple-500">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div class="text-3xl font-bold text-gray-900 mb-1"><%= @submitted_assignments %></div>
            <div class="text-sm text-gray-600 font-medium">Submitted</div>
            <div class="mt-2 text-xs text-purple-600">
              Awaiting grades
            </div>
          </div>

          <!-- Total Classes -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-green-500">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
            </div>
            <div class="text-3xl font-bold text-gray-900 mb-1"><%= @total_classes %></div>
            <div class="text-sm text-gray-600 font-medium">Enrolled Classes</div>
            <div class="mt-2 text-xs text-green-600">
              <%= link_to 'View schedule â†’', schedules_path, class: 'hover:underline' %>
            </div>
          </div>
        </div>
      </div>

      <!-- Two Column Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Upcoming Assignments -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900">Upcoming Assignments</h3>
              <%= link_to 'View all', assignments_path, class: 'text-sm text-blue-600 hover:text-blue-800 font-medium' %>
            </div>
          </div>
          <div class="divide-y divide-gray-200">
            <% if @upcoming_assignments.any? %>
              <% @upcoming_assignments.each do |assignment| %>
                <div class="p-4 hover:bg-gray-50 transition-colors">
                  <%= link_to assignment_path(assignment), class: 'block' do %>
                    <div class="flex items-start justify-between">
                      <div class="flex-1">
                        <h4 class="font-medium text-gray-900 mb-1"><%= assignment.title %></h4>
                        <div class="flex items-center gap-3 text-sm text-gray-600">
                          <span class="flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                            </svg>
                            <%= assignment.course_name %>
                          </span>
                          <span class="flex items-center gap-1 <%= assignment.overdue? ? 'text-red-600 font-medium' : '' %>">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            Due <%= assignment.due_date.strftime("%b %d, %I:%M %p") %>
                          </span>
                        </div>
                      </div>
                      <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-xs font-medium">
                        <%= assignment.points %> pts
                      </span>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="p-8 text-center">
                <% if @enrollments_count == 0 %>
                  <!-- Enhanced empty state for non-enrolled students -->
                  <svg class="w-16 h-16 text-orange-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                  <p class="text-gray-600 font-medium mb-1">No Assignments Yet</p>
                  <p class="text-gray-500 text-sm">Enroll in courses to start receiving assignments</p>
                <% else %>
                  <!-- Regular empty state for enrolled students -->
                  <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                  <p class="text-gray-500 text-sm">No upcoming assignments</p>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Today's Classes -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900">Today's Classes</h3>
              <%= link_to 'View schedule', schedules_path, class: 'text-sm text-blue-600 hover:text-blue-800 font-medium' %>
            </div>
          </div>
          <div class="divide-y divide-gray-200">
            <% if @today_schedules.any? %>
              <% @today_schedules.each do |schedule| %>
                <div class="p-4 hover:bg-gray-50 transition-colors">
                  <%= link_to schedule_path(schedule), class: 'block' do %>
                    <div class="flex items-start gap-3">
                      <div class="w-1 h-16 rounded-full flex-shrink-0" style="background-color: <%= schedule.color || '#3B82F6' %>"></div>
                      <div class="flex-1">
                        <h4 class="font-medium text-gray-900 mb-1"><%= schedule.title %></h4>
                        <div class="text-sm text-gray-600 space-y-1">
                          <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <%= schedule.formatted_time_range %>
                          </div>
                          <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            <%= schedule.room %>
                          </div>
                          <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                            <%= schedule.instructor&.full_name || schedule.user.full_name %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="p-8 text-center">
                <% if @enrollments_count == 0 %>
                  <!-- Enhanced empty state for non-enrolled students -->
                  <svg class="w-24 h-24 text-orange-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                  </svg>
                  <p class="text-gray-600 font-medium mb-2">No Classes Scheduled</p>
                  <p class="text-gray-500 text-sm mb-4">Enroll in courses to see your class schedule here</p>
                  <%= link_to enrollments_path, class: "inline-flex items-center px-4 py-2 bg-orange-500 text-white font-medium rounded-lg hover:bg-orange-600 transition" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    Start Enrolling
                  <% end %>
                <% else %>
                  <!-- Regular empty state for enrolled students with no classes today -->
                  <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  <p class="text-gray-500 text-sm">No classes today</p>
                  <p class="text-gray-400 text-xs mt-1">Enjoy your day off! ðŸŽ‰</p>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Recent Grades -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden lg:col-span-2">
          <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900">Recent Grades</h3>
              <%= link_to 'View all', assignments_path, class: 'text-sm text-blue-600 hover:text-blue-800 font-medium' %>
            </div>
          </div>
          <div class="overflow-x-auto">
            <% if @recent_grades.any? %>
              <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Assignment</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Course</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Grade</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Percentage</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Letter Grade</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Graded</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @recent_grades.each do |submission| %>
                    <tr class="hover:bg-gray-50">
                      <td class="px-6 py-4">
                        <%= link_to submission.assignment.title, submission_path(submission), class: 'text-blue-600 hover:text-blue-800 font-medium' %>
                      </td>
                      <td class="px-6 py-4 text-sm text-gray-600">
                        <%= submission.assignment.course_name %>
                      </td>
                      <td class="px-6 py-4 text-sm font-medium">
                        <%= submission.grade %>/<%= submission.assignment.points %>
                      </td>
                      <td class="px-6 py-4">
                        <span class="px-3 py-1 rounded-full text-xs font-medium <%= submission.percentage_grade >= 90 ? 'bg-green-100 text-green-800' : submission.percentage_grade >= 80 ? 'bg-blue-100 text-blue-800' : submission.percentage_grade >= 70 ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
                          <%= submission.percentage_grade.round(1) %>%
                        </span>
                      </td>
                      <td class="px-6 py-4 text-sm font-semibold">
                        <%= submission.letter_grade %>
                      </td>
                      <td class="px-6 py-4 text-sm text-gray-500">
                        <%= submission.graded_at.strftime("%b %d, %Y") %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            <% else %>
              <div class="p-8 text-center">
                <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <p class="text-gray-500 text-sm">No grades yet</p>
                <p class="text-gray-400 text-xs mt-1">Complete assignments to see your grades here</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>