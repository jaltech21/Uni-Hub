<div class="min-h-screen bg-gray-50 py-8">
  <div class="container mx-auto px-4 max-w-7xl">
    <!-- Welcome Header with Avatar -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-800 rounded-lg shadow-lg p-8 mb-8 text-white">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-6">
          <!-- Avatar -->
          <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center shadow-lg">
            <span class="text-3xl font-bold text-blue-600">
              <%= current_user.first_name&.first&.upcase %><%= current_user.last_name&.first&.upcase %>
            </span>
          </div>
          
          <!-- Welcome Text -->
          <div>
            <h1 class="text-3xl font-bold mb-2">
              Welcome back, @<%= current_user.username %>! ðŸ‘‹
            </h1>
            <p class="text-blue-100 text-lg mb-1">
              <%= current_user.full_name %>
            </p>
            <p class="text-blue-100 text-sm flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
              </svg>
              <%= current_user.email %>
            </p>
          </div>
        </div>
        
        <!-- Current Date/Time -->
        <div class="text-right">
          <div class="text-blue-100 text-sm">Today</div>
          <div class="text-2xl font-semibold"><%= Time.current.strftime("%B %d, %Y") %></div>
          <div class="text-blue-100 text-sm"><%= Time.current.strftime("%A") %></div>
        </div>
      </div>
    </div>

    <% if current_user.teacher? %>
      <!-- TEACHER DASHBOARD -->
      
      <!-- Quick Actions -->
      <div class="mb-8">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Quick Actions</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <%= link_to new_assignment_path, class: "bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-all duration-200 group" do %>
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-200 transition-colors">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
              </div>
              <div>
                <div class="font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">Create Assignment</div>
                <div class="text-sm text-gray-500">Add new homework</div>
              </div>
            </div>
          <% end %>

          <%= link_to (current_user.admin? ? new_admin_panel_schedule_path : schedules_path), class: "bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-all duration-200 group" do %>
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-200 transition-colors">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
              </div>
              <div>
                <div class="font-semibold text-gray-900 group-hover:text-green-600 transition-colors">Create Schedule</div>
                <div class="text-sm text-gray-500">Set up new class</div>
              </div>
            </div>
          <% end %>

          <%= link_to assignments_path, class: "bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-all duration-200 group" do %>
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center group-hover:bg-purple-200 transition-colors">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
                </svg>
              </div>
              <div>
                <div class="font-semibold text-gray-900 group-hover:text-purple-600 transition-colors">Grade Submissions</div>
                <div class="text-sm text-gray-500">Review student work</div>
              </div>
            </div>
          <% end %>

          <%= link_to schedules_path, class: "bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-all duration-200 group" do %>
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center group-hover:bg-yellow-200 transition-colors">
                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <div class="font-semibold text-gray-900 group-hover:text-yellow-600 transition-colors">View Schedules</div>
                <div class="text-sm text-gray-500">Manage your classes</div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Statistics Cards -->
      <div class="mb-8">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Overview Statistics</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <!-- Total Assignments -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-blue-500">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
            </div>
            <div class="text-3xl font-bold text-gray-900 mb-1"><%= @total_assignments %></div>
            <div class="text-sm text-gray-600 font-medium">Total Assignments</div>
            <div class="mt-2 text-xs text-blue-600">
              <%= link_to 'View all â†’', assignments_path, class: 'hover:underline' %>
            </div>
          </div>

          <!-- Pending Submissions -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-yellow-500">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div class="text-3xl font-bold text-gray-900 mb-1"><%= @pending_submissions %></div>
            <div class="text-sm text-gray-600 font-medium">Pending Grading</div>
            <div class="mt-2 text-xs text-yellow-600">
              <%= link_to 'Grade now â†’', assignments_path, class: 'hover:underline' %>
            </div>
          </div>

          <!-- Graded Submissions -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-green-500">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div class="text-3xl font-bold text-gray-900 mb-1"><%= @graded_submissions %></div>
            <div class="text-sm text-gray-600 font-medium">Graded Submissions</div>
            <div class="mt-2 text-xs text-green-600">
              <%= link_to 'View details â†’', assignments_path, class: 'hover:underline' %>
            </div>
          </div>

          <!-- Total Schedules -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-purple-500">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
            </div>
            <div class="text-3xl font-bold text-gray-900 mb-1"><%= @total_schedules %></div>
            <div class="text-sm text-gray-600 font-medium">Active Schedules</div>
            <div class="mt-2 text-xs text-purple-600">
              <%= link_to 'View calendar â†’', schedules_path, class: 'hover:underline' %>
            </div>
          </div>

          <!-- Total Students -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-indigo-500">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
              </div>
            </div>
            <div class="text-3xl font-bold text-gray-900 mb-1"><%= @total_enrolled_students %></div>
            <div class="text-sm text-gray-600 font-medium">Enrolled Students</div>
            <div class="mt-2 text-xs text-indigo-600">
              Across all schedules
            </div>
          </div>

          <!-- Unique Courses -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-pink-500">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-pink-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              </div>
            </div>
            <div class="text-3xl font-bold text-gray-900 mb-1"><%= @unique_courses %></div>
            <div class="text-sm text-gray-600 font-medium">Unique Courses</div>
            <div class="mt-2 text-xs text-pink-600">
              Teaching this semester
            </div>
          </div>
        </div>
      </div>

      <!-- Two Column Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent Assignments -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900">Recent Assignments</h3>
              <%= link_to 'View all', assignments_path, class: 'text-sm text-blue-600 hover:text-blue-800 font-medium' %>
            </div>
          </div>
          <div class="divide-y divide-gray-200">
            <% if @recent_assignments.any? %>
              <% @recent_assignments.each do |assignment| %>
                <div class="p-4 hover:bg-gray-50 transition-colors">
                  <%= link_to assignment_path(assignment), class: 'block' do %>
                    <div class="flex items-start justify-between">
                      <div class="flex-1">
                        <h4 class="font-medium text-gray-900 mb-1"><%= assignment.title %></h4>
                        <div class="flex items-center gap-3 text-sm text-gray-600">
                          <span class="flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                            </svg>
                            <%= assignment.course_name %>
                          </span>
                          <span class="flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            Due <%= assignment.due_date.strftime("%b %d") %>
                          </span>
                        </div>
                      </div>
                      <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-xs font-medium">
                        <%= assignment.points %> pts
                      </span>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="p-8 text-center">
                <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <p class="text-gray-500 text-sm">No assignments yet</p>
                <%= link_to 'Create your first assignment', new_assignment_path, class: 'text-blue-600 hover:text-blue-800 text-sm font-medium mt-2 inline-block' %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Upcoming Schedules -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900">Upcoming Classes</h3>
              <%= link_to 'View calendar', schedules_path, class: 'text-sm text-blue-600 hover:text-blue-800 font-medium' %>
            </div>
          </div>
          <div class="divide-y divide-gray-200">
            <% if @upcoming_schedules.any? %>
              <% @upcoming_schedules.each do |schedule| %>
                <div class="p-4 hover:bg-gray-50 transition-colors">
                  <%= link_to schedule_path(schedule), class: 'block' do %>
                    <div class="flex items-start gap-3">
                      <div class="w-1 h-16 rounded-full flex-shrink-0" style="background-color: <%= schedule.color || '#3B82F6' %>"></div>
                      <div class="flex-1">
                        <h4 class="font-medium text-gray-900 mb-1"><%= schedule.title %></h4>
                        <div class="text-sm text-gray-600 space-y-1">
                          <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            <%= schedule.day_name %>
                          </div>
                          <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <%= schedule.formatted_time_range %>
                          </div>
                          <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            <%= schedule.room %>
                          </div>
                        </div>
                      </div>
                      <span class="text-xs text-gray-500 whitespace-nowrap">
                        <%= schedule.student_count %> students
                      </span>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="p-8 text-center">
                <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <p class="text-gray-500 text-sm">No schedules yet</p>
                <%= link_to (current_user.admin? ? 'Create your first schedule' : 'Browse schedules'), (current_user.admin? ? new_admin_panel_schedule_path : schedules_path), class: 'text-blue-600 hover:text-blue-800 text-sm font-medium mt-2 inline-block' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    <% else %>
      <!-- STUDENT DASHBOARD -->
      
      <!-- Enrollment CTA Banner (Show if no enrollments) -->
      <% if @enrollments_count == 0 %>
        <div class="bg-gradient-to-r from-orange-50 to-red-50 border-2 border-orange-200 rounded-2xl p-8 mb-8">
          <div class="flex items-start gap-6">
            <!-- Icon -->
            <div class="flex-shrink-0">
              <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              </div>
            </div>
            
            <!-- Content -->
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <h3 class="text-2xl font-bold text-gray-900">Get Started with Your First Course!</h3>
                <span class="px-3 py-1 bg-orange-500 text-white text-xs font-semibold rounded-full animate-pulse">Action Required</span>
              </div>
              <p class="text-gray-700 text-lg mb-4">
                You haven't enrolled in any courses yet. Browse available courses and start your learning journey today!
              </p>
              
              <!-- Quick Stats -->
              <div class="flex items-center gap-6 mb-6">
                <div class="flex items-center gap-2 text-sm text-gray-600">
                  <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                  </svg>
                  <span><strong><%= Schedule.where(recurring: true).distinct.pluck(:course).compact.count %></strong> courses available</span>
                </div>
                <div class="flex items-center gap-2 text-sm text-gray-600">
                  <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                  </svg>
                  <span><strong><%= Enrollment.where(status: 'active').count %></strong> students already enrolled</span>
                </div>
              </div>
              
              <!-- CTA Buttons -->
              <div class="flex gap-4">
                <%= link_to enrollments_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-orange-500 to-red-500 text-white font-semibold rounded-lg shadow-lg hover:from-orange-600 hover:to-red-600 transform transition hover:scale-105" do %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                  </svg>
                  Browse & Enroll in Courses
                <% end %>
                
                <%= link_to schedules_path, class: "inline-flex items-center px-6 py-3 bg-white border-2 border-orange-200 text-orange-700 font-semibold rounded-lg hover:bg-orange-50 transform transition hover:scale-105" do %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                  </svg>
                  View Course Catalog
                <% end %>
              </div>
            </div>
            
            <!-- Illustration -->
            <div class="hidden lg:block flex-shrink-0">
              <svg class="w-48 h-48 text-orange-300 opacity-50" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5zm0 2.18l8 3.6v8.72c0 4.23-2.94 8.2-7 9.47V4.18z"/>
                <path d="M12 6L6 9v6c0 3.31 2.29 6.41 5 7.44V9l6-3z"/>
              </svg>
            </div>
          </div>
        </div>
      <% end %>
      
      <!-- Statistics Cards -->
      <div class="mb-8">
