<!-- AI Exam Prep Header -->
<div class="mb-8">
  <div class="flex items-center justify-between mb-4">
    <div class="flex-1">
      <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
        <span class="inline-flex items-center justify-center w-12 h-12 bg-gradient-to-br from-pink-500 to-purple-600 rounded-xl text-white">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
          </svg>
        </span>
        AI Exam Prep
        <span class="ml-2 px-3 py-1 text-sm font-medium bg-pink-100 text-pink-700 rounded-full">AI</span>
        <% if @filter_department %>
          <span class="px-3 py-1 text-sm font-medium bg-purple-100 text-purple-700 rounded-full"><%= @filter_department.code %></span>
        <% end %>
      </h1>
      <p class="text-gray-600 mt-2">Generate AI-powered quizzes from your notes and track your progress</p>
    </div>
    <div class="flex items-center gap-3">
      <!-- Department Filter -->
      <%= form_with url: quizzes_path, method: :get, local: true, class: "flex items-center gap-2" do |form| %>
        <%= form.label :department_id, "Department:", class: "text-sm font-medium text-gray-700" %>
        <%= form.select :department_id, 
            options_from_collection_for_select(Department.active.ordered, :id, :name, @filter_department&.id),
            { include_blank: "All Departments" },
            { class: "rounded-lg border-gray-300 text-sm shadow-sm focus:ring-blue-500 focus:border-blue-500", onchange: "this.form.submit();" } %>
      <% end %>
      
      <%= link_to new_quiz_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-pink-600 to-purple-600 text-white font-semibold rounded-xl hover:from-pink-700 hover:to-purple-700 transition-all shadow-lg hover:shadow-xl" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        Create Quiz
      <% end %>
    </div>
  </div>
</div>

<!-- Quick Stats -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
  <div class="bg-gradient-to-br from-blue-50 to-blue-100 border border-blue-200 rounded-xl p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-blue-600 text-sm font-medium">Total Quizzes</p>
        <p class="text-3xl font-bold text-blue-900 mt-2"><%= @quizzes.count %></p>
      </div>
      <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
    </div>
  </div>

  <div class="bg-gradient-to-br from-green-50 to-green-100 border border-green-200 rounded-xl p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-green-600 text-sm font-medium">Completed</p>
        <p class="text-3xl font-bold text-green-900 mt-2"><%= @attempted_quizzes.count %></p>
      </div>
      <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
    </div>
  </div>

  <div class="bg-gradient-to-br from-purple-50 to-purple-100 border border-purple-200 rounded-xl p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-purple-600 text-sm font-medium">Avg Score</p>
        <p class="text-3xl font-bold text-purple-900 mt-2">
          <% avg = @attempted_quizzes.any? ? @attempted_quizzes.average(:score).to_i : 0 %>
          <%= avg %>%
        </p>
      </div>
      <div class="w-12 h-12 bg-purple-500 rounded-lg flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
        </svg>
      </div>
    </div>
  </div>

  <div class="bg-gradient-to-br from-orange-50 to-orange-100 border border-orange-200 rounded-xl p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-orange-600 text-sm font-medium">Total Questions</p>
        <p class="text-3xl font-bold text-orange-900 mt-2"><%= @quizzes.sum { |q| q.quiz_questions.count } %></p>
      </div>
      <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
    </div>
  </div>
</div>

<!-- My Quizzes Section -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 mb-8">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-xl font-bold text-gray-900">My Quizzes</h2>
    <p class="text-gray-600 text-sm mt-1">Manage and take your AI-generated quizzes</p>
  </div>
  
  <div class="p-6">
    <% if @quizzes.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @quizzes.each do |quiz| %>
          <div class="border border-gray-200 rounded-xl p-6 hover:shadow-lg transition-shadow bg-gradient-to-br from-white to-gray-50">
            <!-- Quiz Header -->
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <h3 class="font-bold text-lg text-gray-900 line-clamp-2"><%= quiz.title %></h3>
                <p class="text-gray-600 text-sm mt-1 line-clamp-2"><%= quiz.description %></p>
              </div>
              <% if quiz.status == 'published' %>
                <span class="ml-2 px-2 py-1 text-xs font-medium bg-green-100 text-green-700 rounded-full">Active</span>
              <% else %>
                <span class="ml-2 px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded-full">Draft</span>
              <% end %>
            </div>

            <!-- Quiz Stats -->
            <div class="grid grid-cols-3 gap-3 mb-4">
              <div class="text-center p-2 bg-blue-50 rounded-lg">
                <p class="text-xs text-blue-600 font-medium">Questions</p>
                <p class="text-lg font-bold text-blue-900"><%= quiz.quiz_questions.count %></p>
              </div>
              <div class="text-center p-2 bg-purple-50 rounded-lg">
                <p class="text-xs text-purple-600 font-medium">Attempts</p>
                <p class="text-lg font-bold text-purple-900"><%= quiz.quiz_attempts.count %></p>
              </div>
              <div class="text-center p-2 bg-green-50 rounded-lg">
                <p class="text-xs text-green-600 font-medium">Best</p>
                <p class="text-lg font-bold text-green-900">
                  <% best = quiz.best_score_for(current_user) %>
                  <%= best ? "#{best}%" : "-" %>
                </p>
              </div>
            </div>

            <!-- Difficulty Badge -->
            <div class="mb-4">
              <% 
                difficulty_colors = {
                  'easy' => 'bg-green-100 text-green-700',
                  'medium' => 'bg-yellow-100 text-yellow-700',
                  'hard' => 'bg-red-100 text-red-700'
                }
                color_class = difficulty_colors[quiz.difficulty] || 'bg-gray-100 text-gray-700'
              %>
              <span class="inline-flex items-center gap-1 px-3 py-1 text-xs font-medium <%= color_class %> rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
                </svg>
                <%= quiz.difficulty.capitalize %>
              </span>
            </div>

            <!-- Action Buttons -->
            <div class="flex gap-2">
              <%= link_to quiz_path(quiz), class: "flex-1 inline-flex items-center justify-center gap-2 px-4 py-2 bg-gradient-to-r from-pink-600 to-purple-600 text-white text-sm font-semibold rounded-lg hover:from-pink-700 hover:to-purple-700 transition-all" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                </svg>
                Start Quiz
              <% end %>
              <%= link_to edit_quiz_path(quiz), class: "px-3 py-2 border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 transition-colors" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-pink-100 to-purple-100 rounded-full mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-pink-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">No quizzes yet</h3>
        <p class="text-gray-600 mb-6">Create your first AI-powered quiz from your notes</p>
        <%= link_to new_quiz_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-pink-600 to-purple-600 text-white font-semibold rounded-xl hover:from-pink-700 hover:to-purple-700 transition-all" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
          Create Your First Quiz
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Recent Attempts Section -->
<% if @attempted_quizzes.any? %>
  <div class="bg-white rounded-xl shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-bold text-gray-900">Recent Attempts</h2>
      <p class="text-gray-600 text-sm mt-1">Your latest quiz performances</p>
    </div>
    
    <div class="p-6">
      <div class="space-y-3">
        <% @attempted_quizzes.each do |attempt| %>
          <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:shadow-md transition-shadow">
            <div class="flex items-center gap-4 flex-1">
              <!-- Score Badge -->
              <div class="flex-shrink-0">
                <% 
                  score_color = if attempt.score >= 80
                    'bg-green-100 text-green-700 border-green-200'
                  elsif attempt.score >= 60
                    'bg-yellow-100 text-yellow-700 border-yellow-200'
                  else
                    'bg-red-100 text-red-700 border-red-200'
                  end
                %>
                <div class="w-16 h-16 rounded-full border-4 <%= score_color %> flex items-center justify-center">
                  <span class="text-xl font-bold"><%= attempt.score.to_i %>%</span>
                </div>
              </div>
              
              <!-- Attempt Info -->
              <div class="flex-1">
                <h4 class="font-semibold text-gray-900"><%= attempt.quiz.title %></h4>
                <p class="text-sm text-gray-600">
                  Completed <%= time_ago_in_words(attempt.completed_at) %> ago
                </p>
                <p class="text-xs text-gray-500 mt-1">
                  <%= attempt.correct_answers %> / <%= attempt.total_questions %> correct
                </p>
              </div>
            </div>
            
            <!-- View Button -->
            <%= link_to quiz_path(attempt.quiz), class: "inline-flex items-center gap-2 px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition-colors" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
              </svg>
              View Details
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
