<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-2 text-sm text-gray-600 mb-4">
        <%= link_to "Schedules", admin_panel_schedules_path, class: "hover:text-indigo-600" %>
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
        <span class="text-gray-900 font-medium">Edit Schedule</span>
      </div>
      <h1 class="text-3xl font-bold text-gray-900">Edit Schedule</h1>
      <p class="mt-2 text-sm text-gray-600">Update schedule information</p>
    </div>

    <!-- Form -->
    <%= render partial: 'form', locals: { 
      schedule: @schedule, 
      url: admin_panel_schedule_path(@schedule), 
      method: :patch,
      submit_text: 'Update Schedule'
    } %>
  </div>
</div>
