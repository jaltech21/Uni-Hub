<div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl shadow-lg border border-gray-100 p-8">
  <%= form_with(model: schedule, url: url, method: method, local: true, class: "space-y-8") do |f| %>
    <% if schedule.errors.any? %>
      <div class="rounded-xl bg-red-50 border-l-4 border-red-500 p-5 shadow-sm">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-red-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-4 flex-1">
            <h3 class="text-base font-semibold text-red-900">
              <%= pluralize(schedule.errors.count, "error") %> prevented this schedule from being saved
            </h3>
            <div class="mt-3 text-sm text-red-800">
              <ul class="list-disc list-inside space-y-1.5">
                <% schedule.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Basic Information Section -->
    <div class="bg-white rounded-xl p-6 border border-gray-200 shadow-sm">
      <div class="flex items-center mb-6 pb-4 border-b border-gray-200">
        <div class="flex items-center justify-center h-10 w-10 rounded-lg bg-indigo-100 text-indigo-600">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900">Basic Information</h3>
          <p class="text-sm text-gray-500">Schedule title and course details</p>
        </div>
      </div>

      <div class="space-y-5">
        <!-- Title -->
        <div>
          <%= f.label :title, "Schedule Title", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <div class="relative rounded-lg shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
            </div>
            <%= f.text_field :title, placeholder: "e.g., Introduction to Business - Fall 2026", class: "block w-full pl-10 pr-4 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-gray-900 placeholder-gray-400 transition duration-150" %>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
          <!-- Course Code -->
          <div>
            <%= f.label :course, "Course Code", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <div class="relative rounded-lg shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              </div>
              <%= f.text_field :course, placeholder: "BUS-101", class: "block w-full pl-10 pr-4 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-gray-900 placeholder-gray-400 transition duration-150" %>
            </div>
          </div>

          <!-- Department -->
          <div>
            <%= f.label :department_id, "Department", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <div class="relative">
              <%= f.collection_select :department_id, @departments, :id, :name, { prompt: "Select Department" }, class: "block w-full pl-3 pr-10 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-gray-900 transition duration-150 appearance-none bg-white" %>
              <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Instructor & Schedule Section -->
    <div class="bg-white rounded-xl p-6 border border-gray-200 shadow-sm">
      <div class="flex items-center mb-6 pb-4 border-b border-gray-200">
        <div class="flex items-center justify-center h-10 w-10 rounded-lg bg-purple-100 text-purple-600">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900">Schedule & Instructor</h3>
          <p class="text-sm text-gray-500">Time, day, and instructor assignment</p>
        </div>
      </div>

      <div class="space-y-5">
        <!-- Instructor -->
        <div>
          <%= f.label :instructor_id, "Instructor", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.collection_select :instructor_id, @instructors, :id, ->(u) { "#{u.first_name} #{u.last_name} (#{u.email})" }, { prompt: "Select Instructor" }, class: "block w-full pl-3 pr-10 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-gray-900 transition duration-150 appearance-none bg-white" %>
            <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
          <!-- Day of Week -->
          <div>
            <%= f.label :day_of_week, "Day of Week", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <div class="relative">
              <%= f.select :day_of_week, 
                  [['Sunday', 0], ['Monday', 1], ['Tuesday', 2], ['Wednesday', 3], ['Thursday', 4], ['Friday', 5], ['Saturday', 6]], 
                  { prompt: "Select Day" }, 
                  class: "block w-full pl-3 pr-10 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-gray-900 transition duration-150 appearance-none bg-white" %>
              <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
          </div>

          <!-- Start Time -->
          <div>
            <%= f.label :start_time, "Start Time", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= f.time_field :start_time, class: "block w-full px-4 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-gray-900 transition duration-150" %>
          </div>

          <!-- End Time -->
          <div>
            <%= f.label :end_time, "End Time", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= f.time_field :end_time, class: "block w-full px-4 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-gray-900 transition duration-150" %>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
          <!-- Room -->
          <div>
            <%= f.label :room, "Room", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <div class="relative rounded-lg shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <%= f.text_field :room, placeholder: "Business Hall - Auditorium", class: "block w-full pl-10 pr-4 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-gray-900 placeholder-gray-400 transition duration-150" %>
            </div>
          </div>

          <!-- Color -->
          <div>
            <%= f.label :color, "Calendar Color", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <div class="flex items-center gap-3">
              <%= f.color_field :color, value: schedule.color || "#6366F1", class: "h-12 w-20 rounded-lg border-2 border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 cursor-pointer transition duration-150" %>
              <span class="text-sm text-gray-600 font-mono"><%= schedule.color || "#6366F1" %></span>
            </div>
          </div>
        </div>

        <!-- Recurring -->
        <div class="bg-indigo-50 rounded-lg p-4 border border-indigo-200">
          <div class="flex items-start">
            <div class="flex items-center h-6">
              <%= f.check_box :recurring, class: "h-5 w-5 text-indigo-600 border-gray-300 rounded focus:ring-2 focus:ring-indigo-500 transition duration-150" %>
            </div>
            <div class="ml-3">
              <%= f.label :recurring, "Recurring Schedule", class: "font-semibold text-gray-900 text-sm" %>
              <p class="text-sm text-gray-600 mt-0.5">This schedule repeats weekly on the selected day</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Description Section -->
    <div class="bg-white rounded-xl p-6 border border-gray-200 shadow-sm">
      <div class="flex items-center mb-6 pb-4 border-b border-gray-200">
        <div class="flex items-center justify-center h-10 w-10 rounded-lg bg-green-100 text-green-600">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"/>
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900">Description</h3>
          <p class="text-sm text-gray-500">Additional details about this schedule</p>
        </div>
      </div>

      <%= f.text_area :description, rows: 5, placeholder: "Enter any additional information about this schedule, such as prerequisites, topics covered, or special notes for students...", class: "block w-full px-4 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-gray-900 placeholder-gray-400 transition duration-150 resize-y" %>
    </div>

    <!-- Form Actions -->
    <div class="flex items-center justify-between pt-6 border-t-2 border-gray-200">
      <div class="text-sm text-gray-500">
        <svg class="inline h-4 w-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        All fields marked with * are required
      </div>
      <div class="flex items-center gap-3">
        <%= link_to admin_panel_schedules_path, class: "inline-flex items-center px-6 py-3 border-2 border-gray-300 rounded-lg text-sm font-semibold text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-150 shadow-sm" do %>
          <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
          Cancel
        <% end %>
        <%= f.submit submit_text, class: "inline-flex items-center px-8 py-3 bg-gradient-to-r from-indigo-600 to-indigo-700 text-white rounded-lg shadow-md hover:from-indigo-700 hover:to-indigo-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 text-sm font-semibold transform hover:scale-105 transition-all duration-150" %>
      </div>
    </div>
  <% end %>
</div>
