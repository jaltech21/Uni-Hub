<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header Section -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @assignment.title %></h1>
        <p class="mt-2 text-sm text-gray-600">
          <%= @assignment.course_name %> • <%= @assignment.category.titleize %> • <%= @assignment.points %> pts
        </p>
        <p class="mt-1 text-sm text-gray-600">
          Due: <%= @assignment.due_date.strftime("%B %d, %Y at %I:%M %p") %>
          <% if @assignment.overdue? %>
            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
              Overdue
            </span>
          <% end %>
        </p>
      </div>
      <%= link_to assignments_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Assignments
      <% end %>
    </div>
  </div>

  <!-- Statistics Section -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <!-- Total Submissions -->
    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-blue-500">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Submissions</dt>
              <dd class="text-2xl font-semibold text-gray-900" id="stat-total"><%= @submissions.count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Submitted -->
    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-green-500">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Submitted</dt>
              <dd class="text-2xl font-semibold text-gray-900" id="stat-submitted"><%= @submissions.submitted.count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Graded -->
    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-purple-500">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Graded</dt>
              <dd class="text-2xl font-semibold text-gray-900" id="stat-graded"><%= @submissions.graded.count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Average Grade -->
    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-yellow-500">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Average Grade</dt>
              <dd class="text-2xl font-semibold text-gray-900" id="stat-average">
                <% avg = @assignment.average_grade %>
                <%= avg.present? ? "#{avg.round(1)}%" : 'N/A' %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters Section -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <!-- Search -->
      <div>
        <label for="search-input" class="block text-sm font-medium text-gray-700 mb-2">Search Student</label>
        <input type="text" id="search-input" placeholder="Search by name..." class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
      </div>

      <!-- Status Filter -->
      <div>
        <label for="status-filter" class="block text-sm font-medium text-gray-700 mb-2">Status</label>
        <select id="status-filter" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
          <option value="">All Status</option>
          <option value="submitted">Submitted</option>
          <option value="graded">Graded</option>
          <option value="late">Late Submission</option>
        </select>
      </div>

      <!-- Sort -->
      <div>
        <label for="sort-select" class="block text-sm font-medium text-gray-700 mb-2">Sort By</label>
        <select id="sort-select" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
          <option value="newest">Newest First</option>
          <option value="oldest">Oldest First</option>
          <option value="name-az">Name A-Z</option>
          <option value="name-za">Name Z-A</option>
          <option value="grade-high">Highest Grade</option>
          <option value="grade-low">Lowest Grade</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Submissions Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <% if @submissions.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Student
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Status
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Submitted At
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Files
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Grade
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200" id="submissions-table">
          <% @submissions.each do |submission| %>
            <tr class="submission-row hover:bg-gray-50"
                data-student-name="<%= submission.user.full_name.downcase %>"
                data-status="<%= submission.status %>"
                data-late="<%= submission.late_submission? %>"
                data-grade="<%= submission.grade.to_i %>"
                data-submitted-at="<%= submission.submitted_at.to_i %>">
              <!-- Student Name -->
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <div class="h-10 w-10 rounded-full bg-blue-500 flex items-center justify-center">
                      <span class="text-white font-medium text-sm">
                        <%= submission.user.full_name.split.map(&:first).join.upcase %>
                      </span>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      <%= submission.user.full_name %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= submission.user.email %>
                    </div>
                  </div>
                </div>
              </td>

              <!-- Status -->
              <td class="px-6 py-4 whitespace-nowrap">
                <% if submission.status == 'graded' %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                    <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Graded
                  </span>
                <% elsif submission.status == 'submitted' %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Submitted
                  </span>
                <% end %>
                <% if submission.late_submission? %>
                  <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    Late
                  </span>
                <% end %>
              </td>

              <!-- Submitted At -->
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <div><%= submission.submitted_at.strftime("%b %d, %Y") %></div>
                <div class="text-xs text-gray-500"><%= submission.submitted_at.strftime("%I:%M %p") %></div>
              </td>

              <!-- Files -->
              <td class="px-6 py-4 whitespace-nowrap">
                <% if submission.documents.attached? %>
                  <div class="text-sm text-gray-900">
                    <%= submission.documents.count %> file<%= submission.documents.count > 1 ? 's' : '' %>
                  </div>
                  <button class="view-files-btn text-xs text-blue-600 hover:text-blue-800" data-submission-id="<%= submission.id %>">
                    View files
                  </button>
                <% else %>
                  <span class="text-sm text-gray-500">No files</span>
                <% end %>
              </td>

              <!-- Grade -->
              <td class="px-6 py-4 whitespace-nowrap">
                <% if submission.grade.present? %>
                  <div class="text-sm font-semibold text-gray-900">
                    <%= submission.grade %>/<%= @assignment.points %>
                  </div>
                  <div class="text-xs text-gray-500">
                    <%= submission.percentage_grade.round(1) %>% (<%= submission.letter_grade %>)
                  </div>
                <% else %>
                  <span class="text-sm text-gray-500">Not graded</span>
                <% end %>
              </td>

              <!-- Actions -->
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to assignment_submission_path(@assignment, submission), class: "text-blue-600 hover:text-blue-900 mr-3" do %>
                  <svg class="inline h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                <% end %>
                <%= link_to edit_assignment_submission_path(@assignment, submission), class: "text-green-600 hover:text-green-900" do %>
                  <svg class="inline h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                <% end %>
              </td>
            </tr>

            <!-- Hidden file list (revealed by JavaScript) -->
            <tr id="files-<%= submission.id %>" class="hidden bg-gray-50">
              <td colspan="6" class="px-6 py-4">
                <div class="text-sm font-medium text-gray-700 mb-2">Submitted Files:</div>
                <ul class="space-y-2">
                  <% submission.documents.each do |document| %>
                    <li class="flex items-center justify-between bg-white p-3 rounded border border-gray-200">
                      <div class="flex items-center">
                        <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <span class="text-sm text-gray-900"><%= document.filename %></span>
                        <span class="ml-3 text-xs text-gray-500">(<%= number_to_human_size(document.byte_size) %>)</span>
                      </div>
                      <%= link_to rails_blob_path(document, disposition: "attachment"), class: "inline-flex items-center px-3 py-1 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                        <svg class="mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                        </svg>
                        Download
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <!-- No Results Message -->
      <div id="no-results" class="hidden text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No submissions found</h3>
        <p class="mt-1 text-sm text-gray-500">Try adjusting your search or filter criteria.</p>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No submissions yet</h3>
        <p class="mt-1 text-sm text-gray-500">Students haven't submitted their work for this assignment yet.</p>
      </div>
    <% end %>
  </div>
</div>

<!-- JavaScript for filtering, sorting, and file viewing -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get DOM elements
    const searchInput = document.getElementById('search-input');
    const statusFilter = document.getElementById('status-filter');
    const sortSelect = document.getElementById('sort-select');
    const tableBody = document.getElementById('submissions-table');
    const noResults = document.getElementById('no-results');
    const statTotal = document.getElementById('stat-total');
    const statSubmitted = document.getElementById('stat-submitted');
    const statGraded = document.getElementById('stat-graded');

    // Get all submission rows
    const allRows = Array.from(document.querySelectorAll('.submission-row'));

    // Filter and sort function
    function filterAndSort() {
      const searchTerm = searchInput.value.toLowerCase().trim();
      const statusValue = statusFilter.value;
      const sortValue = sortSelect.value;

      // Filter rows
      let visibleRows = allRows.filter(row => {
        const studentName = row.dataset.studentName || '';
        const status = row.dataset.status || '';
        const isLate = row.dataset.late === 'true';

        // Search filter
        if (searchTerm && !studentName.includes(searchTerm)) {
          return false;
        }

        // Status filter
        if (statusValue === 'submitted' && status !== 'submitted') {
          return false;
        }
        if (statusValue === 'graded' && status !== 'graded') {
          return false;
        }
        if (statusValue === 'late' && !isLate) {
          return false;
        }

        return true;
      });

      // Sort rows
      visibleRows.sort((a, b) => {
        switch (sortValue) {
          case 'newest':
            return parseInt(b.dataset.submittedAt) - parseInt(a.dataset.submittedAt);
          case 'oldest':
            return parseInt(a.dataset.submittedAt) - parseInt(b.dataset.submittedAt);
          case 'name-az':
            return a.dataset.studentName.localeCompare(b.dataset.studentName);
          case 'name-za':
            return b.dataset.studentName.localeCompare(a.dataset.studentName);
          case 'grade-high':
            return parseInt(b.dataset.grade) - parseInt(a.dataset.grade);
          case 'grade-low':
            return parseInt(a.dataset.grade) - parseInt(b.dataset.grade);
          default:
            return 0;
        }
      });

      // Hide all rows first
      allRows.forEach(row => {
        row.style.display = 'none';
        // Also hide the associated file list row
        const fileRow = row.nextElementSibling;
        if (fileRow && fileRow.id && fileRow.id.startsWith('files-')) {
          fileRow.style.display = 'none';
        }
      });

      // Show and reorder visible rows
      visibleRows.forEach(row => {
        row.style.display = '';
        tableBody.appendChild(row);
        // Maintain the file list row after the submission row
        const fileRow = document.getElementById('files-' + row.dataset.studentName);
        if (fileRow) {
          tableBody.appendChild(fileRow);
        }
      });

      // Update statistics
      updateStats(visibleRows);

      // Show/hide no results message
      const table = tableBody.closest('table');
      if (visibleRows.length === 0) {
        table.style.display = 'none';
        noResults.classList.remove('hidden');
      } else {
        table.style.display = '';
        noResults.classList.add('hidden');
      }
    }

    // Update statistics based on visible rows
    function updateStats(visibleRows) {
      const total = visibleRows.length;
      let submitted = 0;
      let graded = 0;

      visibleRows.forEach(row => {
        const status = row.dataset.status;
        if (status === 'submitted' || status === 'graded') {
          submitted++;
        }
        if (status === 'graded') {
          graded++;
        }
      });

      statTotal.textContent = total;
      statSubmitted.textContent = submitted;
      statGraded.textContent = graded;
    }

    // Attach event listeners
    if (searchInput) {
      searchInput.addEventListener('input', filterAndSort);
    }
    if (statusFilter) {
      statusFilter.addEventListener('change', filterAndSort);
    }
    if (sortSelect) {
      sortSelect.addEventListener('change', filterAndSort);
    }

    // View files toggle
    document.querySelectorAll('.view-files-btn').forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const submissionId = this.dataset.submissionId;
        const fileRow = document.getElementById('files-' + submissionId);
        
        if (fileRow) {
          fileRow.classList.toggle('hidden');
          this.textContent = fileRow.classList.contains('hidden') ? 'View files' : 'Hide files';
        }
      });
    });
  });
</script>