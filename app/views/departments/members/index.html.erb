<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Department Members</h1>
        <p class="mt-1 text-sm text-gray-600"><%= @department.name %> (<%= @department.code %>)</p>
      </div>
      <div class="flex items-center space-x-3">
      <div class="flex gap-2">
        <%= link_to "Export CSV", export_department_members_path(@department, format: :csv), 
            class: "btn btn-secondary" %>
        <%= link_to "View History", history_department_members_path(@department), 
            class: "btn btn-secondary" %>
        <%= link_to '+ Add Member', new_department_member_path(@department), class: 'inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700' %>
      </div>
    end
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">Total Members</div>
      <div class="text-2xl font-bold text-gray-900"><%= @members.total_count + @students.total_count %></div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">Teachers</div>
      <div class="text-2xl font-bold text-blue-600"><%= @members.teachers.count %></div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">Regular Members</div>
      <div class="text-2xl font-bold text-green-600"><%= @members.members.count %></div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">Students</div>
      <div class="text-2xl font-bold text-purple-600"><%= @students.total_count %></div>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="bg-white rounded-lg shadow p-4 mb-6">
    <%= form_with url: department_members_path(@department), method: :get, class: 'space-y-4' do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <%= f.text_field :query, value: params[:query], placeholder: 'Search by name or email', class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
        </div>
        <div>
          <%= f.select :role, [['All Roles', ''], ['Member', 'member'], ['Teacher', 'teacher'], ['Admin', 'admin']], { selected: params[:role] }, class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
        </div>
        <div>
          <%= f.select :status, [['All Status', ''], ['Active', 'active'], ['Inactive', 'inactive'], ['Pending', 'pending']], { selected: params[:status] }, class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
        </div>
        <div class="flex space-x-2">
          <%= f.submit 'Search', class: 'px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700' %>
          <%= link_to 'Clear', department_members_path(@department), class: 'px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300' %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Bulk Actions -->
  <div class="bg-white rounded-lg shadow p-4 mb-6">
    <details class="group">
      <summary class="cursor-pointer font-semibold text-gray-700 hover:text-gray-900">Bulk Actions</summary>
      <div class="mt-4 space-y-4">
        <!-- Bulk Add -->
        <div>
          <h4 class="font-medium text-gray-900 mb-2">Bulk Add Members</h4>
          <%= form_with url: bulk_add_department_members_path(@department), method: :post, class: 'space-y-2' do |f| %>
            <%= f.text_area :emails, rows: 3, placeholder: 'Enter emails separated by commas or newlines', class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
            <div class="flex items-center space-x-2">
              <%= f.select :role, [['Member', 'member'], ['Teacher', 'teacher']], {}, class: 'rounded-md border-gray-300 shadow-sm' %>
              <%= f.submit 'Add Members', class: 'px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 text-sm' %>
            </div>
          <% end %>
        </div>

        <!-- CSV Import -->
        <div>
          <h4 class="font-medium text-gray-900 mb-2">Import from CSV</h4>
          <%= form_with url: import_department_members_path(@department), method: :post, multipart: true, class: 'flex items-center space-x-2' do |f| %>
            <%= f.file_field :csv_file, accept: '.csv', class: 'text-sm' %>
            <%= f.submit 'Import', class: 'px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 text-sm' %>
          <% end %>
          <p class="text-xs text-gray-500 mt-1">CSV format: email, role (optional), notes (optional)</p>
        </div>
      </div>
    </details>
  </div>

  <!-- Teachers and Staff Members -->
  <% if @members.any? %>
    <div class="bg-white rounded-lg shadow mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Teachers & Staff</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Member</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Joined</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Invited By</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @members.each do |member| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                      <span class="text-blue-600 font-semibold"><%= member.user.first_name[0] %><%= member.user.last_name[0] %></span>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900"><%= member.user.full_name %></div>
                      <div class="text-sm text-gray-500"><%= member.user.email %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= member.role == 'admin' ? 'bg-red-100 text-red-800' : member.role == 'teacher' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= member.role.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= member.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= member.status.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= member.joined_at&.strftime('%b %d, %Y') %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= member.invited_by&.full_name || 'System' %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                  <%= link_to 'View', department_member_path(@department, member), class: 'text-blue-600 hover:text-blue-900' %>
                  <%= link_to 'Edit', edit_department_member_path(@department, member), class: 'text-green-600 hover:text-green-900' %>
                  <%= button_to 'Remove', department_member_path(@department, member), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-900' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="px-6 py-4 border-t border-gray-200">
        <%= paginate @members %>
      </div>
    </div>
  <% end %>

  <!-- Students -->
  <% if @students.any? %>
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Students</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Student</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @students.each do |student| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10 rounded-full bg-purple-100 flex items-center justify-center">
                      <span class="text-purple-600 font-semibold"><%= student.first_name[0] %><%= student.last_name[0] %></span>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900"><%= student.full_name %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <%= student.email %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">
                    Student
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to 'View Details', '#', class: 'text-blue-600 hover:text-blue-900' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="px-6 py-4 border-t border-gray-200">
        <%= paginate @students, param_name: :student_page %>
      </div>
    </div>
  <% end %>

  <% if @members.empty? && @students.empty? %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <div class="text-gray-400 mb-4">
        <svg class="mx-auto h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No members yet</h3>
      <p class="text-gray-500 mb-4">Start by adding members to this department</p>
      <%= link_to 'Add First Member', new_department_member_path(@department), class: 'inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700' %>
    </div>
  <% end %>
</div>
