<div class="max-w-6xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center gap-2 text-sm text-gray-600 mb-4">
      <%= link_to "Departments", departments_path, class: "hover:text-blue-600" %> /
      <%= link_to @department.name, department_path(@department), class: "hover:text-blue-600" %> /
      <span class="text-gray-900">Reports & Analytics</span>
    </div>

    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Reports & Analytics</h1>
        <p class="text-gray-600 mt-2">
          Generate comprehensive reports and export department data
        </p>
      </div>
      
      <div>
        <%= link_to "Back to Department", department_dashboard_path(@department), class: "btn btn-secondary" %>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Total Members</p>
          <p class="text-2xl font-bold text-gray-900 mt-1"><%= @department.member_count %></p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
          <span class="text-2xl">ðŸ‘¥</span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Announcements</p>
          <p class="text-2xl font-bold text-gray-900 mt-1"><%= @department.announcements.count %></p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
          <span class="text-2xl">ðŸ“¢</span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Shared Content</p>
          <p class="text-2xl font-bold text-gray-900 mt-1">
            <%= ContentSharingHistory.where(department: @department).count %>
          </p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
          <span class="text-2xl">ðŸ“„</span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Active Members</p>
          <p class="text-2xl font-bold text-gray-900 mt-1">
            <%= @department.active_members.count %>
          </p>
        </div>
        <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center">
          <span class="text-2xl">âœ…</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Available Reports -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Available Reports</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% @available_reports.each do |report| %>
        <div class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center flex-shrink-0">
              <span class="text-2xl"><%= report[:icon] %></span>
            </div>
            
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                <%= report[:name] %>
              </h3>
              <p class="text-sm text-gray-600 mb-4">
                <%= report[:description] %>
              </p>
              
              <div class="flex gap-2">
                <%= link_to "View Report", report[:path], class: "btn btn-primary btn-sm" %>
                <%= link_to "Export CSV", report[:path] + '.csv', class: "btn btn-secondary btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Export Options -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Comprehensive Exports</h2>
    <p class="text-gray-600 mb-6">
      Export all department data in various formats for analysis or archival purposes.
    </p>
    
    <div class="flex flex-wrap gap-4">
      <%= link_to "ðŸ“Š Comprehensive Report (PDF)", send_comprehensive_pdf_department_reports_path(@department), 
          class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700" %>
      <%= link_to "ðŸ“‹ Comprehensive Report (Excel)", send_comprehensive_excel_department_reports_path(@department, format: :xlsx), 
          class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
      
      <%= link_to "ðŸ“ˆ Export Member Statistics (CSV)", member_stats_department_reports_path(@department, format: :csv), 
          class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700" %>
      
      <%= link_to "ðŸ“‹ Export Activity Summary (CSV)", activity_summary_department_reports_path(@department, format: :csv), 
          class: "px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700" %>
      
      <%= link_to "ðŸ“„ Export Content Report (CSV)", content_report_department_reports_path(@department, format: :csv), 
          class: "px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700" %>
    </div>
  </div>
</div>
