<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Course Enrollments</h1>
    <p class="mt-2 text-sm text-gray-600">
      <% if current_user.student? %>
        Manage your course enrollment. You can be enrolled in one course at a time.
      <% elsif current_user.teacher? %>
        View students enrolled in your courses.
      <% else %>
        Manage all course enrollments.
      <% end %>
    </p>
  </div>

  <% if current_user.student? %>
    <!-- Student View -->
    <div class="mb-8">
      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-semibold text-gray-900">Your Enrollment</h2>
          <% if @enrollments.active.empty? %>
            <%= link_to "Enroll in a Course", new_enrollment_path, class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition" %>
          <% end %>
        </div>

        <% if @enrollments.active.any? %>
          <% enrollment = @enrollments.active.first %>
          <div class="border rounded-lg p-4">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="text-lg font-medium text-gray-900">
                  <%= enrollment.schedule.full_name %>
                </h3>
                <p class="text-sm text-gray-600 mt-1">
                  <%= enrollment.schedule.instructor.full_name %>
                </p>
                <p class="text-sm text-gray-500 mt-1">
                  <%= enrollment.schedule.time_display %> | <%= enrollment.schedule.location %>
                </p>
                <div class="mt-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Enrolled
                  </span>
                  <span class="ml-2 text-xs text-gray-500">
                    <%= enrollment.academic_year %> - <%= enrollment.semester.titleize %>
                  </span>
                </div>
              </div>
              <div>
                <%= button_to "Drop Course", enrollment_path(enrollment), 
                    method: :delete, 
                    data: { confirm: "Are you sure you want to drop this course? You will lose access to all assignments." },
                    class: "px-3 py-2 text-sm text-red-600 hover:text-red-800 transition" %>
              </div>
            </div>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No Active Enrollment</h3>
            <p class="mt-1 text-sm text-gray-500">Get started by enrolling in a course.</p>
            <%= link_to "Browse Courses", new_enrollment_path, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Past Enrollments -->
    <% if @enrollments.inactive.any? %>
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Past Enrollments</h2>
        <div class="space-y-3">
          <% @enrollments.inactive.each do |enrollment| %>
            <div class="border rounded-lg p-4 bg-gray-50">
              <h3 class="text-md font-medium text-gray-700">
                <%= enrollment.schedule.full_name %>
              </h3>
              <p class="text-sm text-gray-500 mt-1">
                <%= enrollment.academic_year %> - <%= enrollment.semester.titleize %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

  <% elsif current_user.teacher? %>
    <!-- Teacher View -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Your Courses</h2>
      </div>
      
      <% if @taught_schedules.any? %>
        <div class="divide-y divide-gray-200">
          <% @taught_schedules.each do |schedule| %>
            <div class="px-6 py-4">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-lg font-medium text-gray-900">
                    <%= schedule.full_name %>
                  </h3>
                  <p class="text-sm text-gray-600 mt-1">
                    <%= schedule.time_display %> | <%= schedule.location %>
                  </p>
                  <div class="mt-2">
                    <span class="text-sm text-gray-700 font-medium">
                      <%= schedule.active_enrollments.count %> students enrolled
                    </span>
                    <div class="mt-1 w-48 bg-gray-200 rounded-full h-2">
                      <div class="bg-blue-600 h-2 rounded-full" style="width: 30%"></div>
                    </div>
                  </div>
                </div>
                <div>
                  <%= link_to "View Students", "#", class: "text-sm text-blue-600 hover:text-blue-800" %>
                </div>
              </div>
              
              <!-- Enrolled Students List -->
              <% if schedule.active_students.any? %>
                <div class="mt-4 pt-4 border-t border-gray-100">
                  <h4 class="text-sm font-medium text-gray-700 mb-2">Enrolled Students:</h4>
                  <div class="flex flex-wrap gap-2">
                    <% schedule.active_students.limit(10).each do |student| %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-gray-100 text-gray-800">
                        <%= student.full_name %>
                      </span>
                    <% end %>
                    <% if schedule.active_students.count > 10 %>
                      <span class="text-xs text-gray-500">
                        and <%= schedule.active_students.count - 10 %> more...
                      </span>
                    <% end %>
                  </div>
                </div>
              <% else %>
                <p class="mt-4 text-sm text-gray-500 italic">No students enrolled yet.</p>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="px-6 py-12 text-center">
          <p class="text-gray-500">You are not teaching any courses this semester.</p>
        </div>
      <% end %>
    </div>

  <% else %>
    <!-- Admin View -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Student</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Course</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Instructor</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Period</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @enrollments.each do |enrollment| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= enrollment.user.full_name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= enrollment.schedule.full_name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                <%= enrollment.schedule.instructor.full_name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= enrollment.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= enrollment.status.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= enrollment.academic_year %> <%= enrollment.semester.titleize %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= button_to "Remove", enrollment_path(enrollment), method: :delete, data: { confirm: "Remove this enrollment?" }, class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
