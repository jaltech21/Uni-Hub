<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Enroll in a Course</h1>
        <p class="mt-2 text-sm text-gray-600">
          Choose a course to enroll in. You can only be enrolled in one course at a time.
        </p>
      </div>
      <%= link_to "Back to Enrollments", enrollments_path, class: "text-blue-600 hover:text-blue-800" %>
    </div>
  </div>

  <!-- Current Enrollment Warning -->
  <% if @current_enrollment.present? %>
    <div class="mb-6 bg-yellow-50 border-l-4 border-yellow-400 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-yellow-700">
            You are currently enrolled in <strong><%= @current_enrollment.schedule.full_name %></strong>. 
            Enrolling in a new course will automatically drop your current enrollment.
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Available Courses -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @available_schedules.each do |schedule| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
        <div class="p-6">
          <!-- Course Header -->
          <div class="mb-4">
            <h3 class="text-lg font-semibold text-gray-900">
              <%= schedule.course_code %>
            </h3>
            <p class="text-sm text-gray-600 mt-1">
              <%= schedule.title %>
            </p>
          </div>

          <!-- Instructor -->
          <div class="flex items-center mb-3">
            <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <span class="text-sm text-gray-700">
              <%= schedule.instructor.full_name %>
            </span>
          </div>

          <!-- Department -->
          <% if schedule.department.present? %>
            <div class="flex items-center mb-3">
              <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
              <span class="text-sm text-gray-700">
                <%= schedule.department.name %>
              </span>
            </div>
          <% end %>

          <!-- Schedule Time -->
          <div class="flex items-center mb-3">
            <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-sm text-gray-700">
              <%= schedule.time_display %>
            </span>
          </div>

          <!-- Location -->
          <% if schedule.location.present? %>
            <div class="flex items-center mb-4">
              <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span class="text-sm text-gray-700">
                <%= schedule.location %>
              </span>
            </div>
          <% end %>

          <!-- Enrollment Status -->
          <div class="mb-4">
            <div class="flex justify-between items-center mb-1">
              <span class="text-sm font-medium text-gray-700">Enrollment</span>
              <span class="text-sm text-gray-600">
                <%= schedule.active_enrollments.count %> enrolled
              </span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-blue-600 h-2 rounded-full" style="width: 30%"></div>
            </div>
            <p class="text-xs text-gray-500 mt-1">Unlimited capacity</p>
          </div>

          <!-- Enroll Button -->
          <%= form_with model: Enrollment.new, local: true do |f| %>
            <%= f.hidden_field :schedule_id, value: schedule.id %>
            <%= f.submit "Enroll Now", 
                class: "w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition #{schedule.has_capacity? ? '' : 'opacity-50 cursor-not-allowed'}",
                disabled: !schedule.has_capacity?,
                data: { confirm: @current_enrollment.present? ? "This will drop your current enrollment in #{@current_enrollment.schedule.full_name}. Continue?" : nil } %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @available_schedules.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No Courses Available</h3>
      <p class="mt-1 text-sm text-gray-500">There are no courses available for enrollment at this time.</p>
    </div>
  <% end %>
</div>
