<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-extrabold text-gray-900 mb-8 border-b-4 border-indigo-500 pb-2">
    Attendance for <%= @attendance_list.title %>
  </h1>

  <div class="bg-white shadow-2xl rounded-xl overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider w-1/2">
            Student
          </th>
          <th class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider w-1/4">
            Present
          </th>
          <th class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider w-1/4">
            Absent
          </th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @students.each_with_index do |student, index| %>
          <tr class="<%= index.even? ? 'bg-white' : 'bg-gray-50' %> hover:bg-indigo-50 transition duration-150">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= student.email %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
              <%= form_with(url: attendance_list_attendance_records_path(@attendance_list), method: :post, local: true, data: { turbo_frame: "attendance_form_#{student.id}" }) do |form| %>
                <%= form.hidden_field :user_id, value: student.id %>
                <%= form.hidden_field :present, value: true %>
                <%= form.submit "Mark Present",
                  class: "w-full max-w-[150px] mx-auto py-2 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 disabled:bg-gray-400 disabled:cursor-not-allowed transition duration-150",
                  disabled: @records[student.id]&.present? %>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
              <%= form_with(url: attendance_list_attendance_records_path(@attendance_list), method: :post, local: true, data: { turbo_frame: "attendance_form_#{student.id}" }) do |form| %>
                <%= form.hidden_field :user_id, value: student.id %>
                <%= form.hidden_field :present, value: false %>
                <%= form.submit "Mark Absent",
                  class: "w-full max-w-[150px] mx-auto py-2 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 disabled:bg-gray-400 disabled:cursor-not-allowed transition duration-150",
                  disabled: @records[student.id] && !@records[student.id]&.present? %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-8">
    <%= link_to 'â† Back to Lists', attendance_lists_path, class: "text-indigo-600 hover:text-indigo-800 font-medium text-base inline-flex items-center transition duration-150" %>
  </div>
</div>