<div class="flex items-start justify-between">
  <div class="flex-1">
    <div class="flex items-center gap-3 mb-2">
      <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
      </svg>
      
      <div class="min-w-0 flex-1">
        <h3 class="text-lg font-semibold text-gray-900">
          <%= link_to item.name.presence || item.email, 
              user_path(item), 
              class: "hover:text-blue-600 transition-colors" %>
        </h3>
        <p class="text-sm text-gray-600">
          <%= highlight(item.email, query, 
              highlighter: '<mark class="bg-yellow-200 px-1 rounded">\1</mark>') %>
        </p>
      </div>
      
      <% if item.respond_to?(:role) && item.role.present? %>
        <% role_class = case item.role
                       when 'admin' then "bg-red-100 text-red-800"
                       when 'teacher' then "bg-blue-100 text-blue-800"
                       when 'student' then "bg-green-100 text-green-800"
                       else "bg-gray-100 text-gray-800"
                       end %>
        <span class="px-2 py-1 text-xs font-medium rounded-full <%= role_class %>">
          <%= item.role.humanize %>
        </span>
      <% end %>
    </div>
    
    <div class="flex items-center gap-4 text-sm text-gray-500">
      <% if item.respond_to?(:department) && item.department %>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
          <%= item.department.name %>
        </div>
      <% end %>
      
      <% if item.respond_to?(:student_id) && item.student_id.present? %>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
          ID: <%= item.student_id %>
        </div>
      <% end %>
      
      <% if item.respond_to?(:last_sign_in_at) && item.last_sign_in_at %>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Last seen <%= time_ago_in_words(item.last_sign_in_at) %> ago
        </div>
      <% end %>
      
      <% if item.respond_to?(:confirmed_at) %>
        <% if item.confirmed_at %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            Verified
          </span>
        <% else %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
            Pending
          </span>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="ml-4 flex-shrink-0">
    <div class="flex items-center gap-2">
      <% if current_user.teacher? || current_user.admin? %>
        <%= link_to user_path(item), 
            class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
          Profile →
        <% end %>
      <% else %>
        <%= link_to conversations_path(user_id: item.id), 
            class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
          Message →
        <% end %>
      <% end %>
    </div>
  </div>
</div>