<% content_for :title, "Search" %>

<div class="min-h-screen bg-gray-50">
  <!-- Search Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="text-center">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Search Everything</h1>
        <p class="text-lg text-gray-600 mb-8">Find notes, assignments, discussions, and more across your learning platform</p>
        
        <!-- Main Search Form -->
        <%= form_with url: search_results_path, method: :get, local: true, class: "max-w-4xl mx-auto", id: "main-search-form" do |form| %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <%= form.text_field :q, 
                placeholder: "Search for assignments, notes, discussions...", 
                class: "w-full pl-10 pr-12 py-4 text-lg border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                autocomplete: "off",
                data: { 
                  search_target: "input",
                  action: "input->search#suggest keydown->search#handleKeydown"
                } %>
            <button type="submit" class="absolute inset-y-0 right-0 pr-3 flex items-center">
              <span class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium transition-colors">
                Search
              </span>
            </button>
            
            <!-- Search Suggestions Dropdown -->
            <div id="search-suggestions" class="absolute z-10 w-full bg-white mt-1 rounded-md shadow-lg border hidden">
              <div class="py-1" id="suggestions-content">
                <!-- Suggestions will be populated here -->
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Search Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Quick Access Sidebar -->
      <div class="lg:col-span-1 space-y-6">
        <!-- Recent Searches -->
        <% if session[:recent_searches]&.any? %>
          <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Searches</h3>
            <div class="space-y-2">
              <% session[:recent_searches].each do |search| %>
                <%= link_to search_results_path(q: search), 
                    class: "block text-sm text-blue-600 hover:text-blue-800 hover:bg-blue-50 px-3 py-2 rounded-md transition-colors" do %>
                  <svg class="inline-block w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <%= search %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Popular Searches -->
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Popular Searches</h3>
          <div class="space-y-2">
            <% @popular_searches.each do |search| %>
              <%= link_to search_results_path(q: search), 
                  class: "block text-sm text-gray-600 hover:text-blue-600 hover:bg-gray-50 px-3 py-2 rounded-md transition-colors" do %>
                <svg class="inline-block w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
                <%= search %>
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- Search Tips -->
        <div class="bg-blue-50 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-blue-900 mb-4">Search Tips</h3>
          <div class="space-y-3 text-sm text-blue-800">
            <div class="flex items-start">
              <svg class="w-5 h-5 mr-2 mt-0.5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <strong>Use quotes</strong> for exact phrases: "machine learning"
              </div>
            </div>
            <div class="flex items-start">
              <svg class="w-5 h-5 mr-2 mt-0.5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <strong>Filter by type</strong> to narrow results: assignments, notes, discussions
              </div>
            </div>
            <div class="flex items-start">
              <svg class="w-5 h-5 mr-2 mt-0.5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <strong>Use date ranges</strong> to find recent or specific content
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Main Content Area -->
      <div class="lg:col-span-2">
        <!-- Search Categories -->
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-6">Search by Category</h3>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <% @search_filters[:types].each do |type| %>
              <%= link_to search_results_path(type: type[:value]), 
                  class: "group bg-gray-50 hover:bg-blue-50 rounded-lg p-4 transition-colors" do %>
                <div class="flex flex-col items-center text-center">
                  <div class="w-12 h-12 bg-blue-100 group-hover:bg-blue-200 rounded-lg flex items-center justify-center mb-3">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <!-- Icon will be replaced with proper heroicons -->
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                  </div>
                  <span class="text-sm font-medium text-gray-900 group-hover:text-blue-900">
                    <%= type[:label] %>
                  </span>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow p-6 mt-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-6">Quick Actions</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <%= link_to search_results_path(q: "assignments due this week"), 
                class: "flex items-center p-4 bg-yellow-50 hover:bg-yellow-100 rounded-lg transition-colors" do %>
              <div class="w-10 h-10 bg-yellow-200 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-5 h-5 text-yellow-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <span class="text-sm font-medium text-yellow-900">Upcoming Assignments</span>
                <p class="text-xs text-yellow-700">Due this week</p>
              </div>
            <% end %>

            <%= link_to search_results_path(q: "my notes", type: "notes"), 
                class: "flex items-center p-4 bg-green-50 hover:bg-green-100 rounded-lg transition-colors" do %>
              <div class="w-10 h-10 bg-green-200 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-5 h-5 text-green-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <div>
                <span class="text-sm font-medium text-green-900">My Notes</span>
                <p class="text-xs text-green-700">Personal study materials</p>
              </div>
            <% end %>

            <%= link_to search_results_path(type: "discussions"), 
                class: "flex items-center p-4 bg-purple-50 hover:bg-purple-100 rounded-lg transition-colors" do %>
              <div class="w-10 h-10 bg-purple-200 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-5 h-5 text-purple-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              </div>
              <div>
                <span class="text-sm font-medium text-purple-900">Active Discussions</span>
                <p class="text-xs text-purple-700">Join the conversation</p>
              </div>
            <% end %>

            <%= link_to search_results_path(q: "announcements", type: "announcements"), 
                class: "flex items-center p-4 bg-red-50 hover:bg-red-100 rounded-lg transition-colors" do %>
              <div class="w-10 h-10 bg-red-200 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-5 h-5 text-red-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"></path>
                </svg>
              </div>
              <div>
                <span class="text-sm font-medium text-red-900">Latest Announcements</span>
                <p class="text-xs text-red-700">Stay updated</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript for Search Functionality -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.querySelector('[data-search-target="input"]');
  const suggestionsContainer = document.getElementById('search-suggestions');
  const suggestionsContent = document.getElementById('suggestions-content');
  let searchTimeout;

  if (searchInput) {
    // Handle search suggestions
    searchInput.addEventListener('input', function() {
      const query = this.value.trim();
      
      clearTimeout(searchTimeout);
      
      if (query.length >= 2) {
        searchTimeout = setTimeout(() => {
          fetchSuggestions(query);
        }, 300);
      } else {
        hideSuggestions();
      }
    });

    // Handle keyboard navigation
    searchInput.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        hideSuggestions();
      }
    });

    // Hide suggestions when clicking outside
    document.addEventListener('click', function(e) {
      if (!suggestionsContainer.contains(e.target) && !searchInput.contains(e.target)) {
        hideSuggestions();
      }
    });
  }

  function fetchSuggestions(query) {
    fetch(`/search/suggestions?q=${encodeURIComponent(query)}`, {
      headers: {
        'Accept': 'application/json',
        'X-Requested-With': 'XMLHttpRequest'
      }
    })
    .then(response => response.json())
    .then(data => {
      displaySuggestions(data);
    })
    .catch(error => {
      console.error('Error fetching suggestions:', error);
    });
  }

  function displaySuggestions(data) {
    let html = '';
    
    // Add query suggestions
    if (data.query_suggestions && data.query_suggestions.length > 0) {
      html += '<div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wide">Suggestions</div>';
      data.query_suggestions.forEach(suggestion => {
        html += `
          <a href="/search/results?q=${encodeURIComponent(suggestion)}" 
             class="flex items-center px-3 py-2 text-sm text-gray-700 hover:bg-gray-100">
            <svg class="w-4 h-4 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            ${suggestion}
          </a>
        `;
      });
    }

    // Add content suggestions
    Object.keys(data.suggestions).forEach(type => {
      const items = data.suggestions[type];
      if (items && items.length > 0) {
        html += `<div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wide">${type.charAt(0).toUpperCase() + type.slice(1)}</div>`;
        items.forEach(item => {
          const title = item.title || item.name || item.email || 'Untitled';
          html += `
            <a href="/search/results?q=${encodeURIComponent(data.query)}&type=${type}" 
               class="flex items-center px-3 py-2 text-sm text-gray-700 hover:bg-gray-100">
              <div class="flex-1 truncate">${title}</div>
            </a>
          `;
        });
      }
    });

    if (html) {
      suggestionsContent.innerHTML = html;
      showSuggestions();
    } else {
      hideSuggestions();
    }
  }

  function showSuggestions() {
    if (suggestionsContainer) {
      suggestionsContainer.classList.remove('hidden');
    }
  }

  function hideSuggestions() {
    if (suggestionsContainer) {
      suggestionsContainer.classList.add('hidden');
    }
  }
});
</script>
