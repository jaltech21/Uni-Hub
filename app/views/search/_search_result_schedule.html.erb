<div class="flex items-start justify-between">
  <div class="flex-1">
    <div class="flex items-center gap-3 mb-2">
      <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 0V6a2 2 0 012-2h4a2 2 0 012 2v1M8 7v13a2 2 0 002 2h4a2 2 0 002-2V7M8 7h8m-9 4h10M8 15h8"></path>
      </svg>
      <h3 class="text-lg font-semibold text-gray-900">
        <%= link_to item.title, 
            schedule_path(item), 
            class: "hover:text-blue-600 transition-colors" %>
      </h3>
      
      <% if item.respond_to?(:start_time) && item.start_time %>
        <% time_class = item.start_time < Time.current ? "bg-gray-100 text-gray-800" : 
                       item.start_time <= 1.hour.from_now ? "bg-red-100 text-red-800" : 
                       item.start_time <= 1.day.from_now ? "bg-yellow-100 text-yellow-800" : 
                       "bg-green-100 text-green-800" %>
        <span class="px-2 py-1 text-xs font-medium rounded-full <%= time_class %>">
          <%= item.start_time.strftime("%m/%d %I:%M %p") %>
        </span>
      <% end %>
    </div>
    
    <% if item.description.present? %>
      <p class="text-gray-700 mb-3 line-clamp-2">
        <%= highlight(truncate(strip_tags(item.description), length: 150), query, 
            highlighter: '<mark class="bg-yellow-200 px-1 rounded">\1</mark>') %>
      </p>
    <% end %>
    
    <div class="flex items-center gap-4 text-sm text-gray-500">
      <% if item.respond_to?(:location) && item.location.present? %>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <%= highlight(item.location, query, 
              highlighter: '<mark class="bg-yellow-200 px-1 rounded">\1</mark>') %>
        </div>
      <% end %>
      
      <div class="flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <%= item.user.name if item.respond_to?(:user) && item.user %>
      </div>
      
      <% if item.respond_to?(:instructor) && item.instructor %>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          Instructor: <%= item.instructor.name %>
        </div>
      <% end %>
      
      <% if item.respond_to?(:end_time) && item.end_time %>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Duration: <%= distance_of_time_in_words(item.start_time, item.end_time) %>
        </div>
      <% end %>
      
      <% if item.respond_to?(:participants_count) && item.participants_count %>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
          </svg>
          <%= pluralize(item.participants_count, 'participant') %>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="ml-4 flex-shrink-0">
    <div class="flex items-center gap-2">
      <%= link_to schedule_path(item), 
          class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
        View â†’
      <% end %>
    </div>
  </div>
</div>