<div class="flex items-start justify-between">
  <div class="flex-1">
    <div class="flex items-center gap-3 mb-2">
      <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      <h3 class="text-lg font-semibold text-gray-900">
        <%= link_to item.title.presence || "Untitled Note", 
            note_path(item), 
            class: "hover:text-blue-600 transition-colors" %>
      </h3>
    </div>
    
    <% if item.content.present? %>
      <p class="text-gray-700 mb-3 line-clamp-3">
        <%= highlight(truncate(strip_tags(item.content), length: 200), query, 
            highlighter: '<mark class="bg-yellow-200 px-1 rounded">\1</mark>') %>
      </p>
    <% end %>
    
    <div class="flex items-center gap-4 text-sm text-gray-500">
      <div class="flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <%= item.user.name if item.respond_to?(:user) && item.user %>
      </div>
      
      <% if item.respond_to?(:folder) && item.folder %>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
          </svg>
          <%= item.folder.name %>
        </div>
      <% end %>
      
      <div class="flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <%= time_ago_in_words(item.updated_at) %> ago
      </div>
    </div>
  </div>
  
  <div class="ml-4 flex-shrink-0">
    <div class="flex items-center gap-2">
      <%= link_to note_path(item), 
          class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
        View â†’
      <% end %>
    </div>
  </div>
</div>