<div class="flex items-start justify-between">
  <div class="flex-1">
    <div class="flex items-center gap-3 mb-2">
      <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
      </svg>
      <h3 class="text-lg font-semibold text-gray-900">
        <%= link_to item.title, 
            quiz_path(item), 
            class: "hover:text-blue-600 transition-colors" %>
      </h3>
      
      <% if item.respond_to?(:published) %>
        <% if item.published? %>
          <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
            Published
          </span>
        <% else %>
          <span class="px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800">
            Draft
          </span>
        <% end %>
      <% end %>
      
      <% if item.respond_to?(:due_date) && item.due_date %>
        <% due_class = item.due_date < Date.current ? "bg-red-100 text-red-800" : 
                      item.due_date <= 3.days.from_now ? "bg-yellow-100 text-yellow-800" : 
                      "bg-blue-100 text-blue-800" %>
        <span class="px-2 py-1 text-xs font-medium rounded-full <%= due_class %>">
          Due <%= item.due_date.strftime("%m/%d") %>
        </span>
      <% end %>
    </div>
    
    <% if item.description.present? %>
      <p class="text-gray-700 mb-3 line-clamp-3">
        <%= highlight(truncate(strip_tags(item.description), length: 200), query, 
            highlighter: '<mark class="bg-yellow-200 px-1 rounded">\1</mark>') %>
      </p>
    <% end %>
    
    <div class="flex items-center gap-4 text-sm text-gray-500">
      <div class="flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <%= item.user.name if item.respond_to?(:user) && item.user %>
      </div>
      
      <% if item.respond_to?(:questions_count) && item.questions_count %>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <%= pluralize(item.questions_count, 'question') %>
        </div>
      <% end %>
      
      <% if item.respond_to?(:time_limit) && item.time_limit %>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <%= item.time_limit %> minutes
        </div>
      <% end %>
      
      <% if item.respond_to?(:attempts_count) && item.attempts_count %>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
          </svg>
          <%= pluralize(item.attempts_count, 'attempt') %>
        </div>
      <% end %>
      
      <% if item.respond_to?(:max_attempts) && item.max_attempts.present? %>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Max <%= item.max_attempts %> attempts
        </div>
      <% end %>
      
      <div class="flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Created <%= time_ago_in_words(item.created_at) %> ago
      </div>
    </div>
  </div>
  
  <div class="ml-4 flex-shrink-0">
    <div class="flex items-center gap-2">
      <%= link_to quiz_path(item), 
          class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
        <% if current_user.student? && item.published? %>
          Take Quiz →
        <% else %>
          View →
        <% end %>
      <% end %>
    </div>
  </div>
</div>