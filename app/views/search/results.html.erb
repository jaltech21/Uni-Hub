<% content_for :title, "Search Results for \"#{@query}\"" %>

<div class="min-h-screen bg-gray-50">
  <!-- Search Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <!-- Search Form -->
      <%= form_with url: search_results_path, method: :get, local: true, class: "mb-4", id: "search-form" do |form| %>
        <div class="flex gap-4">
          <div class="flex-1 relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <%= form.text_field :q, 
                value: @query,
                placeholder: "Search for assignments, notes, discussions...", 
                class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>
          <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">
            Search
          </button>
        </div>
        
        <!-- Hidden filter fields -->
        <% @filters.each do |key, value| %>
          <%= form.hidden_field key, value: value %>
        <% end %>
      <% end %>
      
      <!-- Results Summary -->
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">
            <% if @query.present? %>
              Search results for "<span class="text-blue-600"><%= @query %></span>"
            <% else %>
              All Content
            <% end %>
          </h1>
          <p class="text-gray-600 mt-1">
            <%= pluralize(@search_results[:total_results], 'result') %> found
            <% if @filters.any? %>
              with filters applied
            <% end %>
          </p>
        </div>
        
        <div class="flex items-center gap-4">
          <!-- View Toggle -->
          <div class="bg-gray-100 rounded-lg p-1 flex">
            <button type="button" class="px-3 py-1 rounded-md bg-white shadow-sm text-sm font-medium text-gray-900">
              List
            </button>
            <button type="button" class="px-3 py-1 rounded-md text-sm font-medium text-gray-600 hover:text-gray-900">
              Grid
            </button>
          </div>
          
          <!-- Sort Options -->
          <select class="border border-gray-300 rounded-lg px-3 py-2 text-sm" onchange="updateSort(this.value)">
            <option value="relevance">Most Relevant</option>
            <option value="date_desc">Newest First</option>
            <option value="date_asc">Oldest First</option>
            <option value="title">Alphabetical</option>
          </select>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex gap-8">
      <!-- Filters Sidebar -->
      <div class="w-80 flex-shrink-0">
        <div class="bg-white rounded-lg shadow p-6 sticky top-4">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Filters</h3>
          
          <%= form_with url: search_results_path, method: :get, local: true, id: "filters-form" do |form| %>
            <%= form.hidden_field :q, value: @query %>
            
            <!-- Content Type Filter -->
            <div class="mb-6">
              <h4 class="text-sm font-medium text-gray-900 mb-3">Content Type</h4>
              <div class="space-y-2">
                <% %w[notes assignments discussions announcements schedules quizzes users].each do |type| %>
                  <% next if type == 'users' && !current_user.teacher? && !current_user.admin? %>
                  <label class="flex items-center">
                    <%= form.check_box :type, 
                        { multiple: true, checked: @filters[:type] == type }, 
                        type, 
                        nil,
                        class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
                    <span class="ml-2 text-sm text-gray-700"><%= type.humanize %></span>
                    <span class="ml-auto text-xs text-gray-500">
                      <%= @search_results[:results][type]&.count || 0 %>
                    </span>
                  </label>
                <% end %>
              </div>
            </div>
            
            <!-- Date Range Filter -->
            <div class="mb-6">
              <h4 class="text-sm font-medium text-gray-900 mb-3">Date Range</h4>
              <div class="space-y-3">
                <div>
                  <%= form.label :date_from, "From", class: "block text-xs text-gray-600" %>
                  <%= form.date_field :date_from, 
                      value: @filters[:date_from],
                      class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm" %>
                </div>
                <div>
                  <%= form.label :date_to, "To", class: "block text-xs text-gray-600" %>
                  <%= form.date_field :date_to, 
                      value: @filters[:date_to],
                      class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm" %>
                </div>
              </div>
            </div>
            
            <!-- Additional Filters -->
            <% if current_user.teacher? || current_user.admin? %>
              <div class="mb-6">
                <h4 class="text-sm font-medium text-gray-900 mb-3">Department</h4>
                <%= form.select :department_id, 
                    options_from_collection_for_select(Department.all, :id, :name, @filters[:department_id]),
                    { prompt: 'All Departments' },
                    { class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm" } %>
              </div>
            <% end %>
            
            <div class="flex gap-2">
              <button type="submit" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
                Apply Filters
              </button>
              <%= link_to search_results_path(q: @query), 
                  class: "px-4 py-2 border border-gray-300 text-gray-700 hover:bg-gray-50 rounded-md text-sm font-medium transition-colors" do %>
                Clear
              <% end %>
            </div>
          <% end %>
          
          <!-- Active Filters -->
          <% if @filters.any? %>
            <div class="mt-6 pt-6 border-t">
              <h4 class="text-sm font-medium text-gray-900 mb-3">Active Filters</h4>
              <div class="flex flex-wrap gap-2">
                <% @filters.each do |key, value| %>
                  <% next if value.blank? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= key.to_s.humanize %>: <%= value %>
                    <%= link_to search_results_path(@filters.except(key).merge(q: @query)), 
                        class: "ml-1 text-blue-600 hover:text-blue-800" do %>
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                      </svg>
                    <% end %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Results Content -->
      <div class="flex-1">
        <% if @search_results[:total_results] > 0 %>
          <!-- Search Suggestions -->
          <% if @search_results[:suggestions].any? %>
            <div class="bg-blue-50 rounded-lg p-4 mb-6">
              <h4 class="text-sm font-medium text-blue-900 mb-2">Did you mean?</h4>
              <div class="flex flex-wrap gap-2">
                <% @search_results[:suggestions].each do |suggestion| %>
                  <%= link_to search_results_path(q: suggestion), 
                      class: "text-sm text-blue-700 hover:text-blue-900 underline" do %>
                    <%= suggestion %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <!-- Results by Type -->
          <% @search_results[:results].each do |type, items| %>
            <% next if items.empty? %>
            
            <div class="mb-8">
              <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-semibold text-gray-900 capitalize">
                  <%= type.humanize %>
                  <span class="text-sm font-normal text-gray-500">(<%= items.count %>)</span>
                </h2>
                <% if items.count > 5 %>
                  <%= link_to search_results_path(q: @query, type: type), 
                      class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
                    View all <%= items.count %> â†’
                  <% end %>
                <% end %>
              </div>
              
              <div class="space-y-4">
                <% items.limit(5).each do |item| %>
                  <div class="bg-white rounded-lg shadow p-6 hover:shadow-md transition-shadow">
                    <%= render "search_result_#{type.singularize}", item: item, query: @query %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
          
        <% elsif @query.present? %>
          <!-- No Results -->
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No results found</h3>
            <p class="text-gray-600 mb-6">
              We couldn't find anything matching "<strong><%= @query %></strong>".
              <br>Try adjusting your search or filters.
            </p>
            
            <div class="flex justify-center gap-4">
              <%= link_to search_path, 
                  class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium transition-colors" do %>
                New Search
              <% end %>
              <%= link_to search_results_path(q: @query.split.first), 
                  class: "border border-gray-300 text-gray-700 hover:bg-gray-50 px-4 py-2 rounded-md font-medium transition-colors" do %>
                Search "<%= @query.split.first %>"
              <% end %>
            </div>
          </div>
          
        <% else %>
          <!-- Empty Search -->
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Start your search</h3>
            <p class="text-gray-600">Enter a search term to find content across the platform.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
function updateSort(value) {
  const url = new URL(window.location);
  url.searchParams.set('sort', value);
  window.location = url;
}

// Auto-submit filter form on change
document.addEventListener('DOMContentLoaded', function() {
  const filterForm = document.getElementById('filters-form');
  if (filterForm) {
    const checkboxes = filterForm.querySelectorAll('input[type="checkbox"]');
    const selects = filterForm.querySelectorAll('select');
    const dateInputs = filterForm.querySelectorAll('input[type="date"]');
    
    [...checkboxes, ...selects, ...dateInputs].forEach(input => {
      input.addEventListener('change', function() {
        setTimeout(() => filterForm.submit(), 100);
      });
    });
  }
});
</script>
