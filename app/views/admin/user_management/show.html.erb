<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">User Details</h1>
          <p class="mt-2 text-sm text-gray-600"><%= @user.email %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Back to Users", admin_user_management_index_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <%= link_to "Edit User", edit_admin_user_management_path(@user), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
      <!-- Left Column - User Info -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Basic Information -->
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
          <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Basic Information</h3>
          </div>
          <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
            <dl class="sm:divide-y sm:divide-gray-200">
              <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Full name</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                  <%= @user.first_name %> <%= @user.last_name %>
                </dd>
              </div>
              <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Email address</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @user.email %></dd>
              </div>
              <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Role</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    <%= @user.role.titleize %>
                  </span>
                </dd>
              </div>
              <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Department</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                  <%= @user.department&.name || 'Not assigned' %>
                </dd>
              </div>
              <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Account created</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                  <%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </dd>
              </div>
              <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="mt-1 text-sm sm:mt-0 sm:col-span-2">
                  <% if @user.blacklisted? %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                      Blacklisted
                    </span>
                    <p class="mt-2 text-sm text-gray-500">
                      <strong>Reason:</strong> <%= @user.blacklist_reason %><br>
                      <strong>Blacklisted on:</strong> <%= @user.blacklisted_at.strftime("%B %d, %Y") %><br>
                      <strong>By:</strong> <%= @user.blacklisted_by_user&.email || 'Unknown' %>
                    </p>
                  <% else %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      Active
                    </span>
                  <% end %>
                </dd>
              </div>
            </dl>
          </div>
        </div>

        <!-- Recent Enrollments -->
        <% if @user.student? %>
          <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Enrollments</h3>
            </div>
            <div class="border-t border-gray-200">
              <ul role="list" class="divide-y divide-gray-200">
                <% @enrollments.each do |enrollment| %>
                  <li class="px-4 py-4 sm:px-6">
                    <div class="flex items-center justify-between">
                      <div class="flex-1 min-w-0">
                        <p class="text-sm font-medium text-indigo-600 truncate">
                          <%= enrollment.schedule.course.name %>
                        </p>
                        <p class="text-sm text-gray-500">
                          <%= enrollment.schedule.course.code %> • Status: <%= enrollment.status %>
                        </p>
                      </div>
                      <div class="ml-4 flex-shrink-0">
                        <span class="text-xs text-gray-500">
                          <%= enrollment.created_at.strftime("%b %d, %Y") %>
                        </span>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <!-- Audit Log -->
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
          <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Audit Log</h3>
            <p class="mt-1 text-sm text-gray-500">Recent admin actions on this user</p>
          </div>
          <div class="border-t border-gray-200">
            <ul role="list" class="divide-y divide-gray-200">
              <% @audit_logs.each do |log| %>
                <li class="px-4 py-4 sm:px-6">
                  <div class="flex items-center justify-between">
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900">
                        <%= log.action_description %>
                      </p>
                      <p class="text-sm text-gray-500">
                        By <%= log.admin.email %> • <%= log.created_at.strftime("%b %d, %Y at %I:%M %p") %>
                      </p>
                      <% if log.details.present? %>
                        <p class="mt-1 text-xs text-gray-500">
                          <%= log.details.to_json %>
                        </p>
                      <% end %>
                    </div>
                  </div>
                </li>
              <% end %>
              <% if @audit_logs.empty? %>
                <li class="px-4 py-4 sm:px-6 text-sm text-gray-500">
                  No audit logs found for this user.
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

      <!-- Right Column - Actions -->
      <div class="lg:col-span-1">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg sticky top-8">
          <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Actions</h3>
          </div>
          <div class="border-t border-gray-200 px-4 py-5 sm:p-6 space-y-4">
            <!-- Change Role -->
            <div>
              <h4 class="text-sm font-medium text-gray-900 mb-2">Change Role</h4>
              <%= form_with url: change_role_admin_user_management_path(@user), method: :patch, class: "space-y-2" do |f| %>
                <%= f.select :new_role, 
                    options_for_select(User::ROLES.map { |r| [r.titleize, r] }, @user.role),
                    {},
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                <%= f.submit "Update Role", class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
              <% end %>
            </div>

            <!-- Blacklist/Unblacklist -->
            <div class="pt-4 border-t border-gray-200">
              <% if @user.blacklisted? %>
                <%= button_to "Remove from Blacklist", 
                    unblacklist_admin_user_management_path(@user), 
                    method: :patch,
                    class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700",
                    data: { confirm: "Are you sure you want to remove this user from the blacklist?" } %>
              <% else %>
                <h4 class="text-sm font-medium text-gray-900 mb-2">Blacklist User</h4>
                <%= form_with url: blacklist_admin_user_management_path(@user), method: :patch, class: "space-y-2" do |f| %>
                  <%= f.text_area :reason, 
                      placeholder: "Reason for blacklisting...",
                      rows: 3,
                      class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm" %>
                  <%= f.submit "Blacklist User", 
                      class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700",
                      data: { confirm: "Are you sure you want to blacklist this user? They will not be able to log in." } %>
                <% end %>
              <% end %>
            </div>

            <!-- Delete User -->
            <div class="pt-4 border-t border-gray-200">
              <%= button_to "Delete User", 
                  admin_user_management_path(@user), 
                  method: :delete,
                  class: "w-full inline-flex justify-center items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50",
                  data: { confirm: "Are you sure you want to delete this user? This action cannot be undone and will delete all associated data." } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
