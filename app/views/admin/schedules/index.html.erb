<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Schedule Management</h1>
        <p class="mt-2 text-sm text-gray-600">
          Create course schedules and assign instructors. Only admins can create schedules.
        </p>
      </div>
      <%= link_to new_admin_schedule_path, class: "inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 shadow-md transition-all" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Create New Schedule
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
    <%= form_with url: admin_schedules_path, method: :get, local: true, class: "flex flex-wrap gap-4" do |f| %>
      <div class="flex-1 min-w-[200px]">
        <%= f.label :instructor_id, "Instructor", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :instructor_id, 
            options_from_collection_for_select(@instructors, :id, :email, params[:instructor_id]),
            { include_blank: "All Instructors" },
            class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>
      
      <div class="flex-1 min-w-[200px]">
        <%= f.label :department_id, "Department", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :department_id, 
            options_from_collection_for_select(@departments, :id, :name, params[:department_id]),
            { include_blank: "All Departments" },
            class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>
      
      <div class="flex-1 min-w-[200px]">
        <%= f.label :day_of_week, "Day", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :day_of_week, 
            Date::DAYNAMES.each_with_index.map { |day, i| [day, i] },
            { include_blank: "All Days" },
            class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>
      
      <div class="flex items-end">
        <%= f.submit "Filter", class: "px-6 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <!-- Schedules Table -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Course</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Instructor</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Day & Time</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Room</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Enrollments</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @schedules.any? %>
          <% @schedules.each do |schedule| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-gray-900"><%= schedule.course %></div>
                <div class="text-sm text-gray-500"><%= schedule.title %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= schedule.instructor&.email || 'Unassigned' %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= schedule.time_display %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= schedule.room %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= schedule.active_enrollments.count %> students
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex justify-end gap-2">
                  <%= link_to "View", admin_schedule_path(schedule), class: "text-blue-600 hover:text-blue-900" %>
                  <%= link_to "Edit", edit_admin_schedule_path(schedule), class: "text-indigo-600 hover:text-indigo-900" %>
                  <% if schedule.active_enrollments.empty? %>
                    <%= button_to "Delete", admin_schedule_path(schedule), method: :delete, 
                        data: { confirm: "Are you sure?" }, 
                        class: "text-red-600 hover:text-red-900" %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="px-6 py-12 text-center text-gray-500">
              <div class="text-lg font-medium mb-2">No schedules found</div>
              <p class="text-sm">Create your first schedule to get started.</p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
