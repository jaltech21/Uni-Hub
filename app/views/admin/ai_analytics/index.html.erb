<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
        <span class="bg-gradient-to-r from-purple-600 to-blue-600 text-white p-3 rounded-xl">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </span>
        AI Usage Analytics
      </h1>
      <p class="mt-2 text-gray-600">Monitor AI feature performance and usage patterns</p>
    </div>

    <!-- Time Period Selector -->
    <div class="mb-6 flex gap-2">
      <%= link_to "Today", admin_ai_analytics_path(period: 'today'), 
          class: "px-4 py-2 rounded-lg #{@time_period == 'today' ? 'bg-purple-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-50'} border transition-colors" %>
      <%= link_to "This Week", admin_ai_analytics_path(period: 'week'), 
          class: "px-4 py-2 rounded-lg #{@time_period == 'week' ? 'bg-purple-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-50'} border transition-colors" %>
      <%= link_to "This Month", admin_ai_analytics_path(period: 'month'), 
          class: "px-4 py-2 rounded-lg #{@time_period == 'month' ? 'bg-purple-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-50'} border transition-colors" %>
      <%= link_to "All Time", admin_ai_analytics_path(period: 'all'), 
          class: "px-4 py-2 rounded-lg #{@time_period == 'all' ? 'bg-purple-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-50'} border transition-colors" %>
    </div>

    <!-- Key Metrics -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Requests -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 mb-1">Total Requests</p>
            <p class="text-3xl font-bold text-gray-900"><%= @total_requests %></p>
          </div>
          <div class="bg-blue-100 p-3 rounded-lg">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Success Rate -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 mb-1">Success Rate</p>
            <p class="text-3xl font-bold text-green-600"><%= @success_rate.round(1) %>%</p>
          </div>
          <div class="bg-green-100 p-3 rounded-lg">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Average Time -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 mb-1">Avg Response Time</p>
            <p class="text-3xl font-bold text-purple-600"><%= @average_processing_time.round(2) %>s</p>
          </div>
          <div class="bg-purple-100 p-3 rounded-lg">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Total Tokens -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 mb-1">Tokens Used</p>
            <p class="text-3xl font-bold text-orange-600"><%= number_with_delimiter(@total_tokens) %></p>
          </div>
          <div class="bg-orange-100 p-3 rounded-lg">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Status Breakdown -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center gap-3 mb-4">
          <div class="bg-green-100 p-2 rounded-lg">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">Successful</h3>
        </div>
        <p class="text-4xl font-bold text-green-600"><%= @successful_count %></p>
        <p class="text-sm text-gray-500 mt-2"><%= (@successful_count.to_f / @total_requests * 100).round(1) rescue 0 %>% of total</p>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center gap-3 mb-4">
          <div class="bg-red-100 p-2 rounded-lg">
            <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">Failed</h3>
        </div>
        <p class="text-4xl font-bold text-red-600"><%= @failed_count %></p>
        <p class="text-sm text-gray-500 mt-2"><%= (@failed_count.to_f / @total_requests * 100).round(1) rescue 0 %>% of total</p>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center gap-3 mb-4">
          <div class="bg-yellow-100 p-2 rounded-lg">
            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">Rate Limited</h3>
        </div>
        <p class="text-4xl font-bold text-yellow-600"><%= @rate_limited_count %></p>
        <p class="text-sm text-gray-500 mt-2"><%= (@rate_limited_count.to_f / @total_requests * 100).round(1) rescue 0 %>% of total</p>
      </div>
    </div>

    <!-- Action Breakdown -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      <!-- Requests by Action -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Requests by Action</h3>
        <div class="space-y-4">
          <% @stats_by_action.each do |action, count| %>
            <div>
              <div class="flex justify-between items-center mb-2">
                <span class="text-sm font-medium text-gray-700"><%= action.humanize %></span>
                <span class="text-sm font-bold text-gray-900"><%= count %></span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-gradient-to-r from-purple-600 to-blue-600 h-2 rounded-full" 
                     style="width: <%= (count.to_f / @total_requests * 100).round(1) %>%"></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Success Rate by Action -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Success Rate by Action</h3>
        <div class="space-y-4">
          <% @success_by_action.each do |action, rate| %>
            <div>
              <div class="flex justify-between items-center mb-2">
                <span class="text-sm font-medium text-gray-700"><%= action.humanize %></span>
                <span class="text-sm font-bold <%= rate >= 90 ? 'text-green-600' : rate >= 70 ? 'text-yellow-600' : 'text-red-600' %>">
                  <%= rate %>%
                </span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="<%= rate >= 90 ? 'bg-green-500' : rate >= 70 ? 'bg-yellow-500' : 'bg-red-500' %> h-2 rounded-full" 
                     style="width: <%= rate %>%"></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Daily Trends Chart -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-8">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Daily Request Trends (Last 7 Days)</h3>
      <div class="space-y-3">
        <% max_count = @daily_stats.map { |stat| stat[:total] }.max || 1 %>
        <% @daily_stats.each do |stat| %>
          <div>
            <div class="flex justify-between items-center mb-1">
              <span class="text-sm text-gray-600"><%= stat[:date].strftime("%b %d, %Y") %></span>
              <div class="flex gap-4 text-xs">
                <span class="text-green-600">✓ <%= stat[:successful] %></span>
                <span class="text-red-600">✗ <%= stat[:failed] %></span>
                <span class="text-gray-700 font-semibold">Total: <%= stat[:total] %></span>
              </div>
            </div>
            <div class="flex gap-1 h-6">
              <div class="bg-green-500 rounded" 
                   style="width: <%= (stat[:successful].to_f / max_count * 100).round(1) %>%"
                   title="<%= stat[:successful] %> successful"></div>
              <div class="bg-red-500 rounded" 
                   style="width: <%= (stat[:failed].to_f / max_count * 100).round(1) %>%"
                   title="<%= stat[:failed] %> failed"></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Logs Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Recent Activity</h3>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tokens</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Details</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @recent_logs.each do |log| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= log.created_at.strftime("%I:%M %p") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= log.user.email.split('@').first %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                  <%= log.action.humanize %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if log.success? %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Success</span>
                  <% elsif log.rate_limited? %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Rate Limited</span>
                  <% else %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Failed</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                  <%= log.processing_time ? "#{log.processing_time.round(2)}s" : "-" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                  <%= log.tokens_used || "-" %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <% if log.error_message.present? %>
                    <span class="text-red-600 truncate block max-w-xs" title="<%= log.error_message %>">
                      <%= log.error_message.truncate(50) %>
                    </span>
                  <% elsif log.response_details.present? %>
                    <span class="truncate block max-w-xs" title="<%= log.response_details %>">
                      <%= log.response_details.truncate(50) %>
                    </span>
                  <% else %>
                    -
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <% if @recent_logs.empty? %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No activity yet</h3>
        <p class="mt-1 text-sm text-gray-500">Start using AI features to see analytics here.</p>
      </div>
    <% end %>
  </div>
</div>
