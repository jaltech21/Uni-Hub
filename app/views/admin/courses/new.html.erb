<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Create New Course</h1>
    <p class="mt-2 text-sm text-gray-600">Add a new course to the official university catalog</p>
  </div>

  <%= form_with model: [:admin, @course], local: true, class: "bg-white shadow-sm rounded-lg p-6" do |f| %>
    <% if @course.errors.any? %>
      <div class="mb-6 bg-red-50 border-l-4 border-red-400 p-4">
        <div class="flex">
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:
            </h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @course.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Course Code -->
      <div>
        <%= f.label :code, "Course Code", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :code, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "CS101" %>
      </div>

      <!-- Department -->
      <div>
        <%= f.label :department_id, "Department", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.collection_select :department_id, @departments, :id, :name, 
            { prompt: "Select Department" },
            { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
      </div>

      <!-- Course Name -->
      <div class="md:col-span-2">
        <%= f.label :name, "Course Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Introduction to Computer Science" %>
      </div>

      <!-- Description -->
      <div class="md:col-span-2">
        <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :description, rows: 4, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Course description..." %>
      </div>

      <!-- Credits -->
      <div>
        <%= f.label :credits, "Credits", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :credits, min: 1, max: 10, value: 3, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- Duration -->
      <div>
        <%= f.label :duration_weeks, "Duration (weeks)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :duration_weeks, min: 1, max: 52, value: 16, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- Level -->
      <div>
        <%= f.label :level, "Level", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :level, 
            [["Freshman", "freshman"], ["Sophomore", "sophomore"], ["Junior", "junior"], ["Senior", "senior"], ["Graduate", "graduate"]],
            { prompt: "Select Level" },
            { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
      </div>

      <!-- Delivery Method -->
      <div>
        <%= f.label :delivery_method, "Delivery Method", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :delivery_method, 
            [["In Person", "in_person"], ["Online", "online"], ["Hybrid", "hybrid"]],
            {},
            { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
      </div>

      <!-- Max Students -->
      <div>
        <%= f.label :max_students, "Max Students (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :max_students, min: 1, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Leave blank for unlimited" %>
      </div>

      <!-- Tuition Cost -->
      <div>
        <%= f.label :tuition_cost, "Tuition Cost ($)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :tuition_cost, min: 0, step: 0.01, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "0.00" %>
      </div>

      <!-- Instructor Requirements -->
      <div class="md:col-span-2">
        <%= f.label :instructor_requirements, "Instructor Requirements (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :instructor_requirements, rows: 2, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Required qualifications for instructors..." %>
      </div>

      <!-- Active Status -->
      <div class="md:col-span-2">
        <div class="flex items-center">
          <%= f.check_box :active, class: "rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          <%= f.label :active, "Course is active and available", class: "ml-2 text-sm text-gray-700" %>
        </div>
      </div>
    </div>

    <!-- Submit Buttons -->
    <div class="mt-6 flex items-center justify-end gap-4">
      <%= link_to "Cancel", admin_courses_path, class: "px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
      <%= f.submit "Create Course", class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>
</div>
