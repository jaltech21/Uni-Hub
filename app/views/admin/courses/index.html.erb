<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Course Catalog Management</h1>
        <p class="mt-2 text-sm text-gray-600">
          Manage official university courses. Only admins can create and modify courses.
        </p>
      </div>
      <%= link_to new_admin_course_path, class: "inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 shadow-md transition-all" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Create New Course
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
    <%= form_with url: admin_courses_path, method: :get, local: true, class: "flex flex-wrap gap-4" do |f| %>
      <div class="flex-1 min-w-[200px]">
        <%= f.label :department_id, "Department", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :department_id, 
            options_from_collection_for_select(@departments, :id, :name, params[:department_id]),
            { include_blank: "All Departments" },
            class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>
      
      <div class="flex-1 min-w-[200px]">
        <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :status, 
            [["All", ""], ["Active", "active"], ["Inactive", "inactive"]],
            { selected: params[:status] },
            class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>
      
      <div class="flex items-end">
        <%= f.submit "Filter", class: "px-6 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <!-- Courses Table -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Department</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Credits</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Level</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Max Students</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @courses.any? %>
          <% @courses.each do |course| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= course.full_code %></div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900"><%= course.name %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= course.department.name %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= course.credits %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 capitalize"><%= course.level %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= course.max_students || "Unlimited" %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if course.active? %>
                  <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    Active
                  </span>
                <% else %>
                  <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                    Inactive
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex justify-end gap-2">
                  <%= link_to "View", admin_course_path(course), class: "text-blue-600 hover:text-blue-900" %>
                  <%= link_to "Edit", edit_admin_course_path(course), class: "text-indigo-600 hover:text-indigo-900" %>
                  <%= button_to toggle_active_admin_course_path(course), method: :patch, class: "text-gray-600 hover:text-gray-900" do %>
                    <%= course.active? ? "Deactivate" : "Activate" %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="8" class="px-6 py-12 text-center text-gray-500">
              <div class="text-lg font-medium mb-2">No courses found</div>
              <p class="text-sm">Create your first course to get started.</p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
