<%= form_with(model: [:admin, department], local: true, class: "space-y-6") do |form| %>
  <% if department.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(department.errors.count, "error") %> prohibited this department from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% department.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Department Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "e.g., Computer Science" %>
  </div>

  <div>
    <%= form.label :code, "Department Code", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :code, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "e.g., CS", maxlength: 10 %>
    <p class="mt-1 text-sm text-gray-500">A short code to identify the department (max 10 characters)</p>
  </div>

  <div>
    <%= form.label :description, "Description (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :description, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Brief description of the department..." %>
  </div>

  <div class="flex items-center">
    <%= form.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
    <%= form.label :active, "Active", class: "ml-2 block text-sm font-medium text-gray-700" %>
    <p class="ml-2 text-sm text-gray-500">(Users can only be assigned to active departments)</p>
  </div>

  <div class="flex justify-end gap-3 pt-4">
    <%= link_to "Cancel", department.persisted? ? admin_department_path(department) : admin_departments_path, 
        class: "px-6 py-2 border border-gray-300 rounded-lg font-medium text-gray-700 hover:bg-gray-50" %>
    <%= form.submit department.persisted? ? "Update Department" : "Create Department", 
        class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium" %>
  </div>
<% end %>
