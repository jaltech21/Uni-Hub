<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Departments</h1>
        <p class="mt-2 text-sm text-gray-600">Create, edit and manage academic departments</p>
      </div>

      <%= link_to new_admin_department_path, class: "inline-flex items-center px-4 py-2.5 bg-indigo-600 text-white rounded-lg shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" do %>
        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Create Department
      <% end %>
    </div>

    <!-- Search / Filters -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 mb-6 p-5">
      <%= form_with url: admin_departments_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |f| %>
        <div class="flex-1 min-w-[220px]">
          <%= f.label :q, "Search", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :q, value: params[:q], placeholder: "Search departments...", class: "block w-full px-4 py-2.5 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-sm" %>
        </div>

        <div class="min-w-[160px]">
          <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :status, options_for_select([['All',''], ['Active','active'], ['Inactive','inactive']], params[:status]), {}, class: "block w-full px-4 py-2.5 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-sm" %>
        </div>

        <div class="flex gap-2">
          <%= f.submit "Search", class: "inline-flex items-center px-4 py-2.5 bg-indigo-600 text-white rounded-lg shadow-sm hover:bg-indigo-700" %>
          <%= link_to "Clear", admin_departments_path, class: "inline-flex items-center px-4 py-2.5 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      <% end %>
    </div>

    <!-- Departments Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @departments.each do |department| %>
        <div class="bg-white rounded-xl p-6 border border-gray-200 shadow-sm hover:shadow-md transition duration-150">
          <div class="flex items-start justify-between">
            <div>
              <h3 class="text-lg font-semibold text-gray-900"><%= department.name %></h3>
              <p class="text-sm text-indigo-600 mt-1 font-medium"><%= department.code %></p>
            </div>
            <div class="text-right">
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-semibold <%= department.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <svg class="mr-1 h-2 w-2 fill-current" viewBox="0 0 8 8"><circle cx="4" cy="4" r="3"/></svg>
                <%= department.active? ? 'Active' : 'Inactive' %>
              </span>
            </div>
          </div>

          <p class="mt-4 text-sm text-gray-600"><%= department.description.presence || 'No description provided.' %></p>

          <div class="mt-6 flex gap-2">
            <%= link_to edit_admin_department_path(department), class: "flex-1 inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
              Edit
            <% end %>

            <%= button_to toggle_active_admin_department_path(department), method: :patch, class: "inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium border border-transparent bg-indigo-600 text-white hover:bg-indigo-700" do %>
              <%= department.active? ? 'Deactivate' : 'Activate' %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <% if @departments.empty? %>
      <div class="mt-12 text-center">
        <div class="inline-flex items-center justify-center h-24 w-24 rounded-full bg-gray-100">
          <svg class="h-10 w-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7h18M3 12h18M3 17h18"/></svg>
        </div>
        <h3 class="mt-6 text-lg font-semibold text-gray-900">No departments found</h3>
        <p class="mt-2 text-sm text-gray-600">Create your first academic department to get started.</p>
        <div class="mt-6">
          <%= link_to new_admin_department_path, class: "inline-flex items-center px-4 py-2.5 bg-indigo-600 text-white rounded-lg shadow-sm hover:bg-indigo-700" do %>
            Create Department
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
