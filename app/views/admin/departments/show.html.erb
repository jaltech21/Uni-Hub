<div class="container mx-auto px-4 py-8 max-w-6xl">
  <!-- Header -->
  <div class="mb-6">
    <%= link_to "← Back to Departments", admin_departments_path, class: "text-blue-600 hover:text-blue-800 mb-4 inline-block" %>
    
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @department.name %></h1>
        <p class="text-lg text-gray-500 font-mono mt-1"><%= @department.code %></p>
      </div>
      <div class="flex gap-2">
        <%= button_to toggle_active_admin_department_path(@department), method: :patch, 
            class: "px-4 py-2 rounded-lg font-medium #{@department.active ? 'bg-red-100 text-red-700 hover:bg-red-200' : 'bg-green-100 text-green-700 hover:bg-green-200'}" do %>
          <%= @department.active ? 'Deactivate' : 'Activate' %>
        <% end %>
        <%= link_to "Edit", edit_admin_department_path(@department), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium" %>
        <%= button_to "Delete", admin_department_path(@department), method: :delete, 
            data: { turbo_confirm: "Are you sure you want to delete this department? This action cannot be undone." },
            class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium" %>
      </div>
    </div>
  </div>

  <!-- Status Badge -->
  <div class="mb-6">
    <span class="px-3 py-1 text-sm font-semibold rounded-full <%= @department.active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
      <%= @department.active ? '✓ Active' : '✗ Inactive' %>
    </span>
  </div>

  <!-- Description -->
  <% if @department.description.present? %>
    <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-6">
      <p class="text-gray-700"><%= @department.description %></p>
    </div>
  <% end %>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 font-medium">Students</p>
          <p class="text-3xl font-bold text-blue-600"><%= @students.count %></p>
        </div>
        <div class="p-3 bg-blue-100 rounded-full">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 font-medium">Tutors</p>
          <p class="text-3xl font-bold text-green-600"><%= @tutors.count %></p>
        </div>
        <div class="p-3 bg-green-100 rounded-full">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 font-medium">Assignments</p>
          <p class="text-3xl font-bold text-purple-600"><%= @assignments.count %></p>
        </div>
        <div class="p-3 bg-purple-100 rounded-full">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 font-medium">Quizzes</p>
          <p class="text-3xl font-bold text-orange-600"><%= @quizzes.count %></p>
        </div>
        <div class="p-3 bg-orange-100 rounded-full">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Tabs for Students/Tutors/Content -->
  <div class="bg-white rounded-lg shadow">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex">
        <button class="tab-button active py-4 px-6 border-b-2 font-medium text-sm" data-tab="students">
          Students (<%= @students.count %>)
        </button>
        <button class="tab-button py-4 px-6 border-b-2 font-medium text-sm" data-tab="tutors">
          Tutors (<%= @tutors.count %>)
        </button>
        <button class="tab-button py-4 px-6 border-b-2 font-medium text-sm" data-tab="content">
          Content
        </button>
      </nav>
    </div>

    <!-- Students Tab -->
    <div id="students-tab" class="tab-content p-6">
      <% if @students.any? %>
        <div class="space-y-4">
          <% @students.each do |student| %>
            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100">
              <div>
                <p class="font-medium text-gray-900"><%= student.full_name %></p>
                <p class="text-sm text-gray-500"><%= student.email %></p>
              </div>
              <span class="px-3 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">Student</span>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No students assigned to this department yet.</p>
      <% end %>
    </div>

    <!-- Tutors Tab -->
    <div id="tutors-tab" class="tab-content p-6 hidden">
      <% if @tutors.any? %>
        <div class="space-y-4">
          <% @tutors.each do |tutor| %>
            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100">
              <div>
                <p class="font-medium text-gray-900"><%= tutor.full_name %></p>
                <p class="text-sm text-gray-500"><%= tutor.email %></p>
                <p class="text-xs text-gray-400 mt-1">Teaching: <%= tutor.teaching_departments.pluck(:code).join(', ') %></p>
              </div>
              <span class="px-3 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Tutor</span>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No tutors assigned to this department yet.</p>
      <% end %>
    </div>

    <!-- Content Tab -->
    <div id="content-tab" class="tab-content p-6 hidden">
      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Recent Assignments</h3>
          <% if @assignments.any? %>
            <div class="space-y-2">
              <% @assignments.each do |assignment| %>
                <div class="p-3 bg-gray-50 rounded hover:bg-gray-100">
                  <p class="font-medium text-gray-900"><%= assignment.title %></p>
                  <p class="text-sm text-gray-500">Due: <%= assignment.due_date.strftime("%B %d, %Y") %></p>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-sm">No assignments yet.</p>
          <% end %>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Recent Notes</h3>
          <% if @notes.any? %>
            <div class="space-y-2">
              <% @notes.each do |note| %>
                <div class="p-3 bg-gray-50 rounded hover:bg-gray-100">
                  <p class="font-medium text-gray-900"><%= note.title %></p>
                  <p class="text-sm text-gray-500">By: <%= note.user.full_name %></p>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-sm">No notes yet.</p>
          <% end %>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Recent Quizzes</h3>
          <% if @quizzes.any? %>
            <div class="space-y-2">
              <% @quizzes.each do |quiz| %>
                <div class="p-3 bg-gray-50 rounded hover:bg-gray-100">
                  <p class="font-medium text-gray-900"><%= quiz.title %></p>
                  <p class="text-sm text-gray-500">Status: <%= quiz.status.titleize %></p>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-sm">No quizzes yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const buttons = document.querySelectorAll('.tab-button');
    const contents = document.querySelectorAll('.tab-content');

    buttons.forEach(button => {
      button.addEventListener('click', function() {
        const tabName = this.dataset.tab;

        // Remove active class from all buttons
        buttons.forEach(btn => {
          btn.classList.remove('active', 'border-blue-500', 'text-blue-600');
          btn.classList.add('border-transparent', 'text-gray-500');
        });

        // Add active class to clicked button
        this.classList.add('active', 'border-blue-500', 'text-blue-600');
        this.classList.remove('border-transparent', 'text-gray-500');

        // Hide all content
        contents.forEach(content => content.classList.add('hidden'));

        // Show selected content
        document.getElementById(`${tabName}-tab`).classList.remove('hidden');
      });
    });
  });
</script>
