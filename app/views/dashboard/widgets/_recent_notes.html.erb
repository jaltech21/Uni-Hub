<div>
  <% if data && data[:notes] %>
    <div class="space-y-3">
      <% data[:notes].each do |note| %>
        <%= link_to note_path(note[:id]), class: "block" do %>
          <div class="p-3 bg-yellow-50 rounded-lg hover:shadow-md hover:-translate-y-0.5 transition-all duration-200">
            <div class="font-medium text-gray-800 mb-1">
              <%= truncate(note[:title], length: 50) %>
            </div>
            <div class="text-gray-600 text-sm mb-2">
              <%= truncate(note[:content], length: 80) %>
            </div>
            <div class="flex justify-between items-center">
              <small class="text-gray-500">
                <i class="fas fa-folder mr-1"></i>
                <%= note[:folder] || 'General' %>
              </small>
              <small class="text-gray-500">
                <%= note[:updated_at] %>
              </small>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center text-gray-500 py-8">
      <i class="fas fa-sticky-note text-4xl mb-3"></i>
      <p class="mb-3">No recent notes</p>
      <%= link_to new_note_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition inline-block" do %>
        <i class="fas fa-plus mr-2"></i>Create Note
      <% end %>
    </div>
  <% end %>
</div>