<div class="calendar-widget">
  <% if data && data[:events] %>
    <div class="calendar-header mb-3">
      <div class="d-flex justify-content-between align-items-center">
        <h6 class="mb-0 text-primary">
          <i class="fas fa-calendar-alt me-2"></i>
          Upcoming Events
        </h6>
        <%= link_to calendar_path, class: "btn btn-sm btn-outline-primary" do %>
          <i class="fas fa-external-link-alt"></i>
        <% end %>
      </div>
    </div>
    
    <div class="events-list">
      <% data[:events].each do |event| %>
        <div class="event-item mb-2 p-2 border-start border-3 border-<%= event[:type] == 'exam' ? 'danger' : event[:type] == 'assignment' ? 'warning' : 'info' %> bg-light rounded-end">
          <div class="event-title fw-medium small">
            <%= truncate(event[:title], length: 45) %>
          </div>
          <div class="event-details text-muted" style="font-size: 0.75rem;">
            <div class="d-flex justify-content-between">
              <span>
                <i class="fas fa-clock me-1"></i>
                <%= event[:time] %>
              </span>
              <span class="text-<%= event[:days_until] <= 1 ? 'danger' : event[:days_until] <= 3 ? 'warning' : 'muted' %>">
                <%= event[:days_until] == 0 ? 'Today' : "#{event[:days_until]} days" %>
              </span>
            </div>
            <% if event[:location] %>
              <div class="mt-1">
                <i class="fas fa-map-marker-alt me-1"></i>
                <%= event[:location] %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center text-muted py-4">
      <i class="fas fa-calendar fa-2x mb-3"></i>
      <p class="mb-2">No upcoming events</p>
      <%= link_to new_event_path, class: "btn btn-sm btn-primary" do %>
        <i class="fas fa-plus me-1"></i>Add Event
      <% end %>
    </div>
  <% end %>
</div>