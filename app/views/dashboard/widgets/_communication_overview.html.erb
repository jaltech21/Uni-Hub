<div>
  <% config = widget.configuration_with_defaults %>
  <% limit = config['limit'] || 8 %>
  <% show_unread = config['show_unread_count'] != false %>
  
  <div class="space-y-4">
    <!-- Messages Section -->
    <div class="pb-4 border-b border-gray-200">
      <div class="flex justify-between items-center mb-3">
        <h6 class="text-base font-semibold flex items-center gap-2">
          <i class="fas fa-envelope text-blue-600"></i>Messages
        </h6>
        <% if show_unread && data[:unread_messages] && data[:unread_messages] > 0 %>
          <span class="px-2 py-1 bg-red-500 text-white text-xs rounded-full"><%= data[:unread_messages] %></span>
        <% end %>
      </div>
      <% if data[:recent_messages]&.any? %>
        <div class="space-y-2">
          <% data[:recent_messages].first(limit / 2).each do |message| %>
            <div class="p-2 hover:bg-gray-50 rounded transition">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <div class="font-semibold text-sm text-gray-800"><%= message[:sender] %></div>
                  <div class="text-gray-500 text-xs"><%= truncate(message[:subject], length: 50) %></div>
                </div>
                <small class="text-gray-400 text-xs ml-2"><%= time_ago_in_words(message[:sent_at]) %> ago</small>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm">No recent messages</p>
      <% end %>
    </div>
    
    <!-- Discussions Section -->
    <% if config['include_discussions'] != false %>
      <div>
        <div class="flex justify-between items-center mb-3">
          <h6 class="text-base font-semibold flex items-center gap-2">
            <i class="fas fa-comments text-green-600"></i>Discussions
          </h6>
          <% if show_unread && data[:unread_discussions] && data[:unread_discussions] > 0 %>
            <span class="px-2 py-1 bg-green-500 text-white text-xs rounded-full"><%= data[:unread_discussions] %></span>
          <% end %>
        </div>
        <% if data[:recent_discussions]&.any? %>
          <div class="space-y-2">
            <% data[:recent_discussions].first(limit / 2).each do |discussion| %>
              <div class="p-2 hover:bg-gray-50 rounded transition">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="font-semibold text-sm text-gray-800"><%= discussion[:topic] %></div>
                    <div class="text-gray-500 text-xs">
                      <%= discussion[:replies] %> <%= 'reply'.pluralize(discussion[:replies]) %>
                    </div>
                  </div>
                  <small class="text-gray-400 text-xs ml-2"><%= time_ago_in_words(discussion[:updated_at]) %> ago</small>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-sm">No recent discussions</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
