<div class="min-h-screen bg-gray-50 py-8">
  <div class="container mx-auto px-4 max-w-4xl">
    <!-- Header -->
    <div class="mb-8">
      <%= link_to schedules_path, class: "inline-flex items-center text-gray-600 hover:text-gray-800 mb-4" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Schedules
      <% end %>
      
      <h1 class="text-3xl font-bold text-gray-900">Create New Schedule</h1>
      <p class="text-gray-600 mt-2">Set up a new class schedule and enroll students</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-lg shadow-md p-8">
      <%= render 'form', schedule: @schedule %>
    </div>
  </div>
</div>