<div class="min-h-screen bg-gray-50 py-8">
  <div class="container mx-auto px-4 max-w-6xl">
    <!-- Header -->
    <div class="mb-8">
      <%= link_to schedules_path, class: "inline-flex items-center text-gray-600 hover:text-gray-800 mb-4" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Schedules
      <% end %>
      
      <div class="flex items-start justify-between">
        <div>
          <div class="flex items-center gap-3 mb-2">
            <div class="w-4 h-4 rounded" style="background-color: <%= @schedule.color || '#3B82F6' %>"></div>
            <h1 class="text-3xl font-bold text-gray-900"><%= @schedule.title %></h1>
          </div>
          <p class="text-xl text-gray-600"><%= @schedule.course %></p>
        </div>
        
        <!-- Action Buttons (Teacher Only) -->
        <% if current_user.teacher? && (@schedule.user_id == current_user.id || @schedule.instructor_id == current_user.id) %>
          <div class="flex gap-2">
            <%= link_to edit_schedule_path(@schedule), class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 flex items-center gap-2" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Edit
            <% end %>
            
            <%= button_to schedule_path(@schedule), method: :delete, data: { confirm: "Are you sure you want to delete this schedule? This will also remove all student enrollments." }, class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 flex items-center gap-2" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
              Delete
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Schedule Details Card -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-bold text-gray-900 mb-6">Schedule Details</h2>
          
          <div class="space-y-4">
            <!-- Day & Time -->
            <div class="flex items-start gap-4 pb-4 border-b border-gray-200">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-sm font-medium text-gray-500 mb-1">Day & Time</h3>
                <p class="text-lg font-semibold text-gray-900"><%= @schedule.day_name %></p>
                <p class="text-gray-600"><%= @schedule.formatted_time_range %></p>
                <p class="text-sm text-gray-500 mt-1">Duration: <%= @schedule.duration_in_hours.round(2) %> hours</p>
              </div>
            </div>

            <!-- Room -->
            <div class="flex items-start gap-4 pb-4 border-b border-gray-200">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-sm font-medium text-gray-500 mb-1">Room</h3>
                <p class="text-lg font-semibold text-gray-900"><%= @schedule.room %></p>
              </div>
            </div>

            <!-- Instructor -->
            <div class="flex items-start gap-4 pb-4 border-b border-gray-200">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-sm font-medium text-gray-500 mb-1">Instructor</h3>
                <p class="text-lg font-semibold text-gray-900">
                  <% if @schedule.instructor %>
                    <%= @schedule.instructor.full_name %>
                  <% else %>
                    <%= @schedule.user.full_name %>
                  <% end %>
                </p>
              </div>
            </div>

            <!-- Recurring Status -->
            <div class="flex items-start gap-4 pb-4 border-b border-gray-200">
              <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-sm font-medium text-gray-500 mb-1">Recurring</h3>
                <p class="text-lg font-semibold text-gray-900">
                  <%= @schedule.recurring? ? "Weekly" : "One-time" %>
                </p>
              </div>
            </div>

            <!-- Description -->
            <% if @schedule.description.present? %>
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                </div>
                <div class="flex-1">
                  <h3 class="text-sm font-medium text-gray-500 mb-1">Description</h3>
                  <p class="text-gray-900 whitespace-pre-wrap"><%= @schedule.description %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Enrolled Students Card -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-900">Enrolled Students</h2>
            <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-semibold">
              <%= @schedule.student_count %>
            </span>
          </div>

          <% if @schedule.students.any? %>
            <div class="space-y-3">
              <% @schedule.students.each do |student| %>
                <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                  <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center flex-shrink-0">
                    <span class="text-white font-semibold text-sm">
                      <%= student.full_name.first.upcase %>
                    </span>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate">
                      <%= student.full_name %>
                    </p>
                    <p class="text-xs text-gray-500 truncate">
                      <%= student.email %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="w-16 h-16 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              <p class="text-gray-500 text-sm">No students enrolled yet</p>
              <% if current_user.teacher? && (@schedule.user_id == current_user.id || @schedule.instructor_id == current_user.id) %>
                <p class="text-gray-400 text-xs mt-1">Edit schedule to add students</p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
