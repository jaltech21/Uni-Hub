<% 
  # Cache theme classes
  content_class = content_wrapper_theme_class
  heading_class = heading_theme_class
  subtext_class = subtext_theme_class
  card_class = card_theme_class
  border_class = border_theme_class
  
  # Ensure instance variables are defined
  @available_schedules ||= []
  @enrolled_schedules ||= []
%>

<div class="min-h-screen <%= content_class %> py-8">
  <div class="container mx-auto px-4 max-w-7xl">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h1 class="text-3xl font-bold <%= heading_class %>">Browse Available Classes</h1>
          <p class="<%= subtext_class %> mt-1">Find and enroll in classes that fit your schedule</p>
        </div>
        <%= link_to schedules_path, class: "inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 transition" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to My Schedule
        <% end %>
      </div>
    </div>

    <!-- Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <div class="<%= card_class %> rounded-lg shadow-sm p-4 border-l-4 border-blue-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm <%= subtext_class %> font-medium">Available Classes</p>
            <p class="text-2xl font-bold <%= heading_class %>"><%= @available_schedules.count %></p>
          </div>
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="<%= card_class %> rounded-lg shadow-sm p-4 border-l-4 border-green-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm <%= subtext_class %> font-medium">Your Enrolled Classes</p>
            <p class="text-2xl font-bold <%= heading_class %>"><%= @enrolled_schedules.count %></p>
          </div>
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="<%= card_class %> rounded-lg shadow-sm p-4 border-l-4 border-purple-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm <%= subtext_class %> font-medium">Unique Courses</p>
            <p class="text-2xl font-bold <%= heading_class %>"><%= @enrolled_schedules.map(&:course).uniq.count %></p>
          </div>
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Available Classes List -->
    <div class="<%= card_class %> rounded-lg shadow-md overflow-hidden">
      <div class="p-6 border-b <%= border_class %>">
        <h2 class="text-xl font-semibold <%= heading_class %>">Available Classes</h2>
      </div>

      <% if @available_schedules.empty? %>
        <div class="p-12 text-center">
          <svg class="w-16 h-16 mx-auto <%= subtext_class %> mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <h3 class="text-xl font-semibold <%= heading_class %> mb-2">No Available Classes</h3>
          <p class="<%= subtext_class %>">All available classes are currently in your schedule.</p>
        </div>
      <% else %>
        <div class="divide-y <%= border_class %>">
          <% @available_schedules.each do |schedule| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <h3 class="text-lg font-semibold <%= heading_class %>"><%= schedule.course %></h3>
                    <span class="px-3 py-1 text-xs font-semibold rounded-full <%= schedule.recurring? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                      <%= schedule.recurring? ? 'Recurring' : 'One-time' %>
                    </span>
                  </div>
                  
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-3">
                    <div class="flex items-center text-sm <%= subtext_class %>">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      </svg>
                      <span class="font-medium">Instructor:</span>
                      <span class="ml-1"><%= schedule.instructor&.full_name || 'N/A' %></span>
                    </div>
                    
                    <div class="flex items-center text-sm <%= subtext_class %>">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                      </svg>
                      <span class="font-medium">Students:</span>
                      <span class="ml-1"><%= schedule.student_count %></span>
                    </div>
                    
                    <div class="flex items-center text-sm <%= subtext_class %>">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                      <span class="font-medium">Day:</span>
                      <span class="ml-1"><%= schedule.day_of_week&.titleize || 'TBD' %></span>
                    </div>
                    
                    <div class="flex items-center text-sm <%= subtext_class %>">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <span class="font-medium">Time:</span>
                      <span class="ml-1">
                        <%= schedule.start_time.strftime('%I:%M %p') if schedule.start_time %> - 
                        <%= schedule.end_time.strftime('%I:%M %p') if schedule.end_time %>
                      </span>
                    </div>
                  </div>

                  <% if schedule.location.present? %>
                    <div class="flex items-center text-sm <%= subtext_class %> mb-2">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                      <span class="font-medium">Location:</span>
                      <span class="ml-1"><%= schedule.location %></span>
                    </div>
                  <% end %>

                  <% if schedule.description.present? %>
                    <p class="text-sm <%= subtext_class %> mt-2"><%= truncate(schedule.description, length: 150) %></p>
                  <% end %>
                </div>

                <div class="ml-4 flex flex-col gap-2">
                  <%= link_to schedule_path(schedule), class: "inline-flex items-center px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition text-sm" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    View Details
                  <% end %>
                  
                  <%= button_to enroll_schedule_path(schedule), class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition text-sm" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Enroll
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
