<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Share Content</h1>
        <p class="mt-2 text-sm text-gray-600">
          <%= @content.class.name %>: <strong><%= @content.title %></strong>
        </p>
      </div>
      <div>
        <% back_path = case @content
                       when Assignment then assignment_path(@content)
                       when Note then note_path(@content)
                       when Quiz then quiz_path(@content)
                       end %>
        <%= link_to 'â† Back', back_path, class: 'text-blue-600 hover:text-blue-800' %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Share with Departments -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Share with Departments</h2>
      </div>
      <div class="px-6 py-6">
        <%= form_with url: content_sharing_index_path, method: :post, local: true, class: 'space-y-4' do |f| %>
          <%= hidden_field_tag :content_type, @content_type %>
          <%= hidden_field_tag :content_id, @content.id %>
          
          <!-- Department Selection -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Select Departments</label>
            <%= select_tag :department_ids,
                  options_from_collection_for_select(
                    @available_departments.where.not(id: @shared_departments.pluck(:id)),
                    :id,
                    :name
                  ),
                  multiple: true,
                  class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500',
                  size: 5 %>
            <p class="mt-1 text-sm text-gray-500">Hold Ctrl (Cmd on Mac) to select multiple departments</p>
          </div>
          
          <!-- Permission Level -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Permission Level</label>
            <%= select_tag :permission_level,
                  options_for_select(get_permission_options(@content), 'view'),
                  class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500' %>
            <p class="mt-1 text-sm text-gray-500"><%= get_permission_description(@content) %></p>
          </div>
          
          <!-- Submit Button -->
          <div>
            <%= f.submit 'Share', class: 'w-full inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700' %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Currently Shared With -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Currently Shared With</h2>
      </div>
      <div class="px-6 py-6">
        <% if @shared_departments.any? %>
          <div class="space-y-3">
            <% @shared_departments.each do |department| %>
              <% sharing_record = @sharing_service.send(:get_sharing_record, department) %>
              <div class="flex items-center justify-between p-3 border border-gray-200 rounded-md">
                <div class="flex-1">
                  <div class="flex items-center space-x-2">
                    <span class="font-medium text-gray-900"><%= department.name %></span>
                    <span class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-800 rounded"><%= department.code %></span>
                  </div>
                  <% if sharing_record %>
                    <div class="mt-1 flex items-center space-x-2">
                      <span class="text-xs text-gray-500">Permission:</span>
                      <%= form_with url: update_permission_content_sharing_index_path, method: :patch, local: true, class: 'inline' do |f| %>
                        <%= hidden_field_tag :content_type, @content_type %>
                        <%= hidden_field_tag :content_id, @content.id %>
                        <%= hidden_field_tag :department_id, department.id %>
                        <%= select_tag :permission_level,
                              options_for_select(get_permission_options(@content), sharing_record.permission_level),
                              onchange: 'this.form.submit();',
                              class: 'text-xs px-2 py-1 border border-gray-300 rounded' %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <div>
                  <%= button_to 'ðŸ—‘ï¸', 
                        content_sharing_path(content_type: @content_type, content_id: @content.id, department_id: department.id),
                        method: :delete,
                        data: { confirm: "Remove sharing with #{department.name}?" },
                        class: 'text-red-600 hover:text-red-800',
                        title: 'Remove' %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-8">Not shared with any departments yet.</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Sharing History -->
  <div class="mt-6 bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Sharing History</h2>
    </div>
    <div class="px-6 py-6">
      <% if @sharing_history.any? %>
        <div class="overflow-hidden">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Department</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Permission</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">By</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @sharing_history.each do |history| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= history.created_at.strftime('%b %d, %Y %I:%M %p') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 text-xs font-medium rounded <%= history.action == 'shared' ? 'bg-green-100 text-green-800' : history.action == 'unshared' ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800' %>">
                      <%= history.action.titleize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= history.department.name %> (<%= history.department.code %>)
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= history.permission_level || '-' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= history.shared_by.name %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No sharing history yet.</p>
      <% end %>
    </div>
  </div>
</div>

<%
  # Helper methods for the view
  def get_permission_options(content)
    case content
    when Assignment
      [['View Only', 'view'], ['Submit', 'submit'], ['Manage', 'manage']]
    when Note
      [['View Only', 'view'], ['Edit', 'edit'], ['Manage', 'manage']]
    when Quiz
      [['View Only', 'view'], ['Take Quiz', 'take'], ['Manage', 'manage']]
    else
      [['View Only', 'view']]
    end
  end
  
  def get_permission_description(content)
    case content
    when Assignment
      "View: Can see assignment | Submit: Can submit work | Manage: Full control"
    when Note
      "View: Can read note | Edit: Can modify content | Manage: Full control"
    when Quiz
      "View: Can see quiz | Take: Can attempt quiz | Manage: Full control"
    else
      "View: Read-only access"
    end
  end
%>
