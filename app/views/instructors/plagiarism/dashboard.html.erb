<% content_for :title, "Plagiarism Dashboard - #{@department.name}" %>

<div class="plagiarism-dashboard">
  <div class="dashboard-header">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h1 class="page-title">
          <i class="fas fa-search me-2"></i>
          Plagiarism Detection Dashboard
        </h1>
        <p class="text-muted">Department: <%= @department.name %></p>
      </div>
      <div class="col-md-4 text-end">
        <%= link_to "Export Report", 
            instructors_department_export_plagiarism_report_path(@department),
            class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="row g-4 mb-4">
    <div class="col-md-3">
      <div class="card bg-primary text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-grow-1">
              <h5 class="card-title">Total Submissions</h5>
              <h2 class="mb-0"><%= @total_submissions %></h2>
            </div>
            <div class="ms-3">
              <i class="fas fa-file-upload fa-2x opacity-75"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card bg-success text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-grow-1">
              <h5 class="card-title">Checked</h5>
              <h2 class="mb-0"><%= @checked_submissions %></h2>
            </div>
            <div class="ms-3">
              <i class="fas fa-shield-alt fa-2x opacity-75"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card bg-warning text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-grow-1">
              <h5 class="card-title">Flagged</h5>
              <h2 class="mb-0"><%= @flagged_submissions %></h2>
            </div>
            <div class="ms-3">
              <i class="fas fa-flag fa-2x opacity-75"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card bg-danger text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-grow-1">
              <h5 class="card-title">High Similarity</h5>
              <h2 class="mb-0"><%= @high_similarity_cases %></h2>
            </div>
            <div class="ms-3">
              <i class="fas fa-exclamation-triangle fa-2x opacity-75"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Similarity Distribution -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-chart-pie me-2"></i>
            Similarity Distribution
          </h5>
        </div>
        <div class="card-body">
          <% if @similarity_distribution.any? %>
            <canvas id="similarityChart" width="400" height="200"></canvas>
            <script>
              const ctx = document.getElementById('similarityChart').getContext('2d');
              new Chart(ctx, {
                type: 'doughnut',
                data: {
                  labels: <%= @similarity_distribution.keys.to_json.html_safe %>,
                  datasets: [{
                    data: <%= @similarity_distribution.values.to_json.html_safe %>,
                    backgroundColor: [
                      '#28a745', '#6c757d', '#ffc107', 
                      '#fd7e14', '#dc3545', '#6f42c1'
                    ]
                  }]
                },
                options: {
                  responsive: true,
                  maintainAspectRatio: false,
                  plugins: {
                    legend: {
                      position: 'bottom'
                    }
                  }
                }
              });
            </script>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-chart-pie fa-3x text-muted mb-3"></i>
              <p class="text-muted">No data available yet</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- AI Detection Stats -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-robot me-2"></i>
            AI Content Detection
          </h5>
        </div>
        <div class="card-body">
          <% if @ai_detection_stats.any? %>
            <div class="row text-center">
              <div class="col-4">
                <div class="card bg-light">
                  <div class="card-body p-3">
                    <h4 class="text-danger"><%= @ai_detection_stats[:high_probability] || 0 %></h4>
                    <small class="text-muted">High Risk</small>
                  </div>
                </div>
              </div>
              <div class="col-4">
                <div class="card bg-light">
                  <div class="card-body p-3">
                    <h4 class="text-warning"><%= @ai_detection_stats[:medium_probability] || 0 %></h4>
                    <small class="text-muted">Medium Risk</small>
                  </div>
                </div>
              </div>
              <div class="col-4">
                <div class="card bg-light">
                  <div class="card-body p-3">
                    <h4 class="text-success"><%= @ai_detection_stats[:low_probability] || 0 %></h4>
                    <small class="text-muted">Low Risk</small>
                  </div>
                </div>
              </div>
            </div>
            <hr>
            <div class="text-center">
              <p class="mb-1">
                <strong><%= @ai_detection_stats[:high_probability_percentage] || 0 %>%</strong>
              </p>
              <small class="text-muted">High AI probability rate</small>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-robot fa-3x text-muted mb-3"></i>
              <p class="text-muted">No AI detection data available</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Cases -->
  <div class="row mt-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="fas fa-exclamation-circle me-2"></i>
            Recent Flagged Cases
          </h5>
          <div>
            <%= form_with url: instructors_department_bulk_plagiarism_check_path(@department), method: :post, local: true, class: "d-inline" do |f| %>
              <%= f.hidden_field :assignment_ids, value: @assignments.pluck(:id).join(',') %>
              <%= f.submit "Check All Assignments", 
                  class: "btn btn-primary btn-sm",
                  data: { 
                    confirm: "Run plagiarism checks on all assignments?",
                    disable_with: "Processing..." 
                  } %>
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <% if @recent_cases.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Student</th>
                    <th>Assignment</th>
                    <th>Similarity</th>
                    <th>Status</th>
                    <th>Detected</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @recent_cases.each do |check| %>
                    <tr class="<%= 'table-warning' if check.similarity_percentage > 50 %>">
                      <td>
                        <div>
                          <strong><%= check.submission.user.name %></strong>
                          <br>
                          <small class="text-muted"><%= check.submission.user.email %></small>
                        </div>
                      </td>
                      <td>
                        <%= link_to check.submission.assignment.title,
                            instructors_department_assignment_plagiarism_path(@department, check.submission.assignment),
                            class: "text-decoration-none" %>
                      </td>
                      <td>
                        <% similarity = check.similarity_percentage %>
                        <span class="badge <%= similarity > 70 ? 'bg-danger' : similarity > 30 ? 'bg-warning' : 'bg-success' %>">
                          <%= similarity %>%
                        </span>
                      </td>
                      <td>
                        <span class="badge bg-secondary">
                          <%= check.review_status.humanize %>
                        </span>
                      </td>
                      <td>
                        <small class="text-muted">
                          <%= time_ago_in_words(check.created_at) %> ago
                        </small>
                      </td>
                      <td>
                        <div class="btn-group btn-group-sm">
                          <%= link_to "Review", 
                              instructors_department_plagiarism_check_review_path(@department, check),
                              class: "btn btn-outline-primary btn-sm" %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-shield-check fa-3x text-success mb-3"></i>
              <h5>No Recent Cases</h5>
              <p class="text-muted">All submissions are clear or haven't been checked yet.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
.plagiarism-dashboard .card {
  border: none;
  box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
  transition: box-shadow 0.15s ease-in-out;
}

.plagiarism-dashboard .card:hover {
  box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
}

.dashboard-header {
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid #dee2e6;
}

.page-title {
  color: #495057;
  font-weight: 600;
}

canvas {
  max-height: 200px;
}
</style>