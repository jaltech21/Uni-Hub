<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to '← Back to Announcements', announcements_path(department_id: @announcement.department_id || @department.id), class: 'text-blue-600 hover:text-blue-800' %>
  </div>
  
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900"><%= @announcement.persisted? ? 'Edit Announcement' : 'New Announcement' %></h1>
    </div>
    
    <div class="px-6 py-6">
      <%= form_with model: @announcement, url: @announcement.persisted? ? announcement_path(@announcement) : announcements_path(department_id: @department.id), local: true, class: 'space-y-6' do |f| %>
        <!-- Error Messages -->
        <% if @announcement.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <h3 class="text-sm font-medium text-red-800 mb-2">
              <%= pluralize(@announcement.errors.count, "error") %> prohibited this announcement from being saved:
            </h3>
            <ul class="list-disc list-inside text-sm text-red-700">
              <% @announcement.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <!-- Title -->
        <div>
          <%= f.label :title, class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= f.text_field :title, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500', placeholder: 'Enter announcement title' %>
        </div>
        
        <!-- Content -->
        <div>
          <%= f.label :content, class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= f.text_area :content, rows: 8, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500', placeholder: 'Enter announcement content' %>
          <p class="mt-1 text-sm text-gray-500">You can use line breaks to format your content.</p>
        </div>
        
        <!-- Priority -->
        <div>
          <%= f.label :priority, class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= f.select :priority, 
                Announcement::PRIORITIES.map { |p| [p.titleize, p] }, 
                {}, 
                class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500' %>
          <p class="mt-1 text-sm text-gray-500">
            <span class="font-medium">Urgent:</span> Red alert • 
            <span class="font-medium">High:</span> Orange warning • 
            <span class="font-medium">Normal:</span> Blue info • 
            <span class="font-medium">Low:</span> Gray notice
          </p>
        </div>
        
        <!-- Expiration Date -->
        <div>
          <%= f.label :expires_at, 'Expiration Date (Optional)', class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= f.datetime_local_field :expires_at, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500' %>
          <p class="mt-1 text-sm text-gray-500">Leave blank if the announcement should not expire.</p>
        </div>
        
        <!-- Published At -->
        <div>
          <%= f.label :published_at, 'Publication Date (Optional)', class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= f.datetime_local_field :published_at, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500' %>
          <p class="mt-1 text-sm text-gray-500">Leave blank to save as draft. Set a future date to schedule publication.</p>
        </div>
        
        <!-- Pinned -->
        <div class="flex items-center">
          <%= f.check_box :pinned, class: 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded' %>
          <%= f.label :pinned, 'Pin this announcement', class: 'ml-2 text-sm text-gray-700' %>
          <p class="ml-6 text-sm text-gray-500">(Pinned announcements appear at the top)</p>
        </div>
        
        <!-- Actions -->
        <div class="flex items-center justify-between pt-6 border-t border-gray-200">
          <div class="flex items-center space-x-3">
            <%= f.submit @announcement.persisted? ? 'Update Announcement' : 'Create Announcement', class: 'inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700' %>
            <%= link_to 'Cancel', announcements_path(department_id: @announcement.department_id || @department.id), class: 'inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50' %>
          </div>
          
          <% if @announcement.persisted? %>
            <%= link_to 'Delete', announcement_path(@announcement), method: :delete, data: { confirm: 'Are you sure?' }, class: 'inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50' %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
