<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl w-full">
    <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
      <div class="grid md:grid-cols-2">
        <!-- Left Side - Image/Illustration -->
        <div class="hidden md:flex md:flex-col justify-center items-center bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-600 p-12 text-white">
          <div class="max-w-md text-center">
            <!-- Education Icon -->
            <svg class="w-32 h-32 mx-auto mb-8 text-white/90" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            
            <h2 class="text-3xl font-bold mb-4">Welcome to Uni-Hub</h2>
            <p class="text-lg text-white/90 mb-8">Your all-in-one platform for academic excellence and collaboration</p>
            
            <div class="space-y-4 text-left">
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-white/90 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h4 class="font-semibold">Smart Assignment Tracking</h4>
                  <p class="text-sm text-white/80">Never miss a deadline again</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-white/90 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h4 class="font-semibold">AI-Powered Study Tools</h4>
                  <p class="text-sm text-white/80">Summarization, quiz generation & more</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-white/90 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h4 class="font-semibold">Collaborative Workspace</h4>
                  <p class="text-sm text-white/80">Share notes and work together</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Side - Form -->
        <div class="p-8 sm:p-12">
          <div class="max-w-md mx-auto">
            <!-- Logo/Brand -->
            <div class="text-center mb-8">
              <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= heading %></h1>
              <p class="text-gray-600">
                <% if resource.new_record? %>
                  Join thousands of students and educators
                <% else %>
                  Welcome back! Please sign in to continue
                <% end %>
              </p>
            </div>

            <%= form_with model: resource, url: url, class: "space-y-6" do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              
              <!-- Email Field -->
              <div>
                <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                    </svg>
                  </div>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                    placeholder: "your.email@university.edu",
                    id: "email_field",
                    class: "block w-full pl-10 pr-12 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm" %>
                  
                  <!-- Validation Feedback Icon -->
                  <% if resource.is_a?(User) && resource.new_record? %>
                    <div id="email_validation_icon" class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none hidden">
                      <!-- Loading spinner -->
                      <svg id="email_loading" class="animate-spin h-5 w-5 text-gray-400 hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                      </svg>
                      <!-- Available checkmark -->
                      <svg id="email_available" class="h-5 w-5 text-green-500 hidden" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      <!-- Unavailable X -->
                      <svg id="email_unavailable" class="h-5 w-5 text-red-500 hidden" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                      </svg>
                    </div>
                  <% end %>
                </div>
                
                <!-- Validation Message -->
                <% if resource.is_a?(User) && resource.new_record? %>
                  <div id="email_validation_message" class="mt-1 text-xs hidden">
                    <span id="email_message_text"></span>
                  </div>
                <% end %>
              </div>
              
              <!-- Username Field (Sign Up only) -->
              <% if resource.is_a?(User) && resource.new_record? %>
                <div>
                  <%= f.label :username, class: "block text-sm font-semibold text-gray-700 mb-2" %>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <span class="text-gray-500 font-medium">@</span>
                    </div>
                    <%= f.text_field :username, autocomplete: "username", 
                      placeholder: "johndoe",
                      id: "username_field",
                      class: "block w-full pl-8 pr-12 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm" %>
                    
                    <!-- Validation Feedback Icon -->
                    <div id="username_validation_icon" class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none hidden">
                      <!-- Loading spinner -->
                      <svg id="username_loading" class="animate-spin h-5 w-5 text-gray-400 hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                      </svg>
                      <!-- Available checkmark -->
                      <svg id="username_available" class="h-5 w-5 text-green-500 hidden" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      <!-- Unavailable X -->
                      <svg id="username_unavailable" class="h-5 w-5 text-red-500 hidden" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                      </svg>
                    </div>
                  </div>
                  
                  <!-- Validation Message -->
                  <div id="username_validation_message" class="mt-1 text-xs hidden">
                    <span id="username_message_text"></span>
                  </div>
                  
                  <p class="mt-1 text-xs text-gray-500">3-20 characters, letters, numbers, and underscores only</p>
                </div>
              <% end %>
              
              <!-- Password Field -->
              <div>
                <%= f.label :password, class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                  </div>
                  <%= f.password_field :password, autocomplete: resource.new_record? ? "new-password" : "current-password",
                    placeholder: "Enter your password",
                    class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm" %>
                </div>
                <% if !resource.new_record? %>
                  <p class="mt-1 text-xs text-gray-500">Minimum 6 characters</p>
                <% end %>
              </div>
              
              <!-- Password Confirmation (Sign Up only) -->
              <% if resource.is_a?(User) && resource.new_record? %>
                <div>
                  <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                      </svg>
                    </div>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password",
                      placeholder: "Confirm your password",
                      class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm" %>
                  </div>
                </div>

                <!-- Role Selection (Sign Up only) -->
                <div>
                  <%= f.label :role, class: "block text-sm font-semibold text-gray-700 mb-2" %>
                  <div class="grid grid-cols-2 gap-3">
                    <label class="relative flex cursor-pointer rounded-lg border border-gray-300 bg-white px-4 py-3 shadow-sm focus-within:ring-2 focus-within:ring-blue-500 hover:border-blue-400 transition duration-150">
                      <%= f.radio_button :role, "student", class: "sr-only", checked: true %>
                      <div class="flex items-center w-full">
                        <div class="flex-shrink-0">
                          <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                          </svg>
                        </div>
                        <div class="ml-3">
                          <span class="block text-sm font-medium text-gray-900">Student</span>
                        </div>
                      </div>
                    </label>

                    <label class="relative flex cursor-pointer rounded-lg border border-gray-300 bg-white px-4 py-3 shadow-sm focus-within:ring-2 focus-within:ring-blue-500 hover:border-blue-400 transition duration-150">
                      <%= f.radio_button :role, "teacher", class: "sr-only" %>
                      <div class="flex items-center w-full">
                        <div class="flex-shrink-0">
                          <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-2.051 0-4.033-.315-5.889-.755M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2M4 21h16a2 2 0 002-2v-4a2 2 0 00-2-2H4a2 2 0 00-2 2v4a2 2 0 002 2z" />
                          </svg>
                        </div>
                        <div class="ml-3">
                          <span class="block text-sm font-medium text-gray-900">Teacher</span>
                        </div>
                      </div>
                    </label>
                  </div>
                </div>
              <% end %>

              <!-- Remember Me / Forgot Password (Sign In only) -->
              <% if !resource.new_record? %>
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                    <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
                  </div>
                  
                  <div class="text-sm">
                    <%= link_to "Forgot password?", new_password_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
                  </div>
                </div>
              <% end %>

              <!-- Submit Button -->
              <div>
                <%= f.submit submit_text, class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out cursor-pointer transform hover:scale-[1.02]" %>
              </div>
            <% end %>

            <!-- Links -->
            <div class="mt-6">
              <div class="relative">
                <div class="absolute inset-0 flex items-center">
                  <div class="w-full border-t border-gray-300"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                  <span class="px-2 bg-white text-gray-500">
                    <% if resource.new_record? %>
                      Already have an account?
                    <% else %>
                      Don't have an account?
                    <% end %>
                  </span>
                </div>
              </div>

              <div class="mt-4 text-center">
                <% if resource.new_record? %>
                  <%= link_to "Sign in here", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
                <% else %>
                  <%= link_to "Create an account", new_registration_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>