<% content_for :title, "Analytics Dashboards" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header Section -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Analytics Dashboards</h1>
      <p class="text-gray-600">Manage and view your analytics dashboards</p>
    </div>
    
    <div class="mt-4 md:mt-0 flex gap-3">
      <%= link_to new_analytics_dashboard_path, 
                  class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors shadow-sm" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Create Dashboard
      <% end %>
      <%= link_to templates_analytics_dashboards_path, 
                  class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 font-medium rounded-lg border border-gray-300 hover:bg-gray-50 transition-colors shadow-sm",
                  data: { bs_toggle: "modal", bs_target: "#templatesModal" } do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
        </svg>
        Templates
      <% end %>
    </div>
  </div>

  <!-- Filters and Search -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= form_with url: analytics_dashboards_path, method: :get, local: true, class: "flex gap-2" do |f| %>
          <div class="relative flex-1">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <%= f.text_field :search, placeholder: "Search dashboards...", 
                             value: params[:search], 
                             class: "w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>
          <%= f.submit "Search", class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors" %>
        <% end %>
      </div>
      
      <div class="flex flex-wrap gap-2">
        <%= link_to "All", analytics_dashboards_path, 
                    class: "px-4 py-2 rounded-lg font-medium transition-colors #{params[:type].blank? ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
        <% @dashboard_types.each do |type| %>
          <%= link_to type.humanize, analytics_dashboards_path(type: type), 
                      class: "px-4 py-2 rounded-lg font-medium transition-colors #{params[:type] == type ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Dashboard Grid -->
  <% if @dashboards.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @dashboards.each do |dashboard| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-lg transition-shadow">
          <div class="p-6">
            <div class="flex justify-between items-start mb-4">
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 mb-1">
                  <%= link_to dashboard.title, dashboard, class: "hover:text-blue-600 transition-colors" %>
                </h3>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= dashboard.dashboard_type == 'student' ? 'bg-green-100 text-green-800' : dashboard.dashboard_type == 'teacher' ? 'bg-blue-100 text-blue-800' : 'bg-purple-100 text-purple-800' %>">
                  <%= dashboard.dashboard_type.humanize %>
                </span>
              </div>
              
              <div class="relative">
                <button type="button" class="text-gray-400 hover:text-gray-600 transition-colors" data-bs-toggle="dropdown">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
                  </svg>
                </button>
                <div class="dropdown-menu dropdown-menu-end shadow-lg">
                  <%= link_to dashboard, class: "dropdown-item" do %>
                    <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    View
                  <% end %>
                  <%= link_to edit_analytics_dashboard_path(dashboard), class: "dropdown-item" do %>
                    <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    Edit
                  <% end %>
                  <%= link_to duplicate_analytics_dashboard_path(dashboard), method: :post, class: "dropdown-item" do %>
                    <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                    </svg>
                    Duplicate
                  <% end %>
                  <div class="border-t border-gray-200 mt-2 pt-2">
                    <%= link_to toggle_active_analytics_dashboard_path(dashboard), method: :patch, class: "dropdown-item" do %>
                      <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                      </svg>
                      Toggle Active
                    <% end %>
                    <%= link_to dashboard, method: :delete, class: "dropdown-item text-red-600", data: { confirm: "Are you sure you want to delete this dashboard?" } do %>
                      <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                      Delete
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="px-6 py-4 border-t border-gray-200">
              <p class="text-sm text-gray-600 mb-3">
                <%= dashboard.description.present? ? truncate(dashboard.description, length: 100) : "No description provided" %>
              </p>
              
              <div class="grid grid-cols-2 gap-4 text-sm text-gray-500 mb-3">
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                  <%= pluralize(dashboard.dashboard_widgets.count, 'widget') %>
                </div>
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                  <%= dashboard.view_count || 0 %> views
                </div>
                <div class="flex items-center col-span-2">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Updated <%= time_ago_in_words(dashboard.updated_at) %> ago
                </div>
              </div>
              
              <div class="flex items-center gap-2">
                <% if dashboard.active? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    Active
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    Inactive
                  </span>
                <% end %>
                
                <% if dashboard.is_default %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                    Default
                  </span>
                <% end %>
                
                <% if dashboard.department %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                    <%= dashboard.department.name %>
                  </span>
                <% end %>
              </div>
            </div>
            
            <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 rounded-b-lg">
              <div class="flex gap-2">
                <%= link_to dashboard, class: "flex-1 text-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors" do %>
                  View Dashboard
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-16">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-blue-100 rounded-full mb-6">
        <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
      </div>
      <h3 class="text-2xl font-semibold text-gray-900 mb-2">No Dashboards Found</h3>
      <p class="text-gray-600 mb-6 max-w-md mx-auto">
        <% if params[:search].present? %>
          No dashboards match your search criteria. Try adjusting your filters or search terms.
        <% else %>
          You haven't created any dashboards yet. Get started by creating your first dashboard.
        <% end %>
      </p>
      <%= link_to new_analytics_dashboard_path, class: "inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors shadow-sm" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Create Your First Dashboard
      <% end %>
    </div>
  <% end %>

  <!-- Pagination -->
  <% if @dashboards.respond_to?(:current_page) %>
    <div class="flex justify-center mt-8">
      <%= paginate @dashboards %>
    </div>
  <% end %>
</div>

<!-- Templates Modal -->
<div class="modal fade" id="templatesModal" tabindex="-1">
  <div class="modal-dialog modal-xl">
    <div class="modal-content rounded-lg border-0 shadow-xl">
      <div class="modal-header bg-gradient-to-r from-blue-600 to-blue-700 text-white border-0">
        <h5 class="modal-title text-lg font-semibold flex items-center">
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
          </svg>
          Dashboard Templates
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body p-6">
        <div id="templates-content">
          <div class="text-center py-12">
            <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
            <p class="mt-4 text-gray-600">Loading templates...</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  font-size: 0.875rem;
}

.status-indicators .badge {
  margin-right: 0.25rem;
}


<script>
document.addEventListener('DOMContentLoaded', function() {
  const templatesModal = document.getElementById('templatesModal');
  if (templatesModal) {
    templatesModal.addEventListener('show.bs.modal', function() {
      loadTemplates();
    });
  }
  
  function loadTemplates() {
    const content = document.getElementById('templates-content');
    
    fetch('<%= templates_analytics_dashboards_path %>', {
      headers: {
        'Accept': 'application/json',
        'X-Requested-With': 'XMLHttpRequest'
      }
    })
    .then(response => response.json())
    .then(templates => {
      let html = '<div class="grid grid-cols-1 md:grid-cols-2 gap-4">';
      
      templates.forEach(template => {
        html += `
          <div class="bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
            <div class="p-4">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">${template.name}</h3>
              <p class="text-sm text-gray-600 mb-3">${template.description}</p>
              <div class="flex items-center text-sm text-gray-500">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
                ${template.widget_count} widgets
              </div>
            </div>
            <div class="px-4 py-3 bg-gray-50 border-t border-gray-200">
              <form method="post" action="<%= create_from_template_analytics_dashboards_path %>">
                <input type="hidden" name="authenticity_token" value="${document.querySelector('[name="csrf-token"]').content}">
                <input type="hidden" name="template" value="${template.id}">
                <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                  Use Template
                </button>
              </form>
            </div>
          </div>
        `;
      });
      
      html += '</div>';
      
      if (templates.length === 0) {
        html = `
          <div class="text-center py-12">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">No Templates Available</h3>
            <p class="text-gray-600">Templates will be available based on your role and permissions.</p>
          </div>
        `;
      }
      
      content.innerHTML = html;
    })
    .catch(error => {
      console.error('Error loading templates:', error);
      content.innerHTML = `
        <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded">
          <div class="flex">
            <svg class="h-5 w-5 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="text-sm text-red-700">Failed to load templates. Please try again.</p>
          </div>
        </div>
      `;
    });
  }
});
</script>