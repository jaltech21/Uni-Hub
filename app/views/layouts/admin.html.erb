<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Admin Dashboard" %> - Uni-Hub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="/assets/builds/application.css">
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <!-- Admin Navigation -->
    <nav class="bg-white border-b border-gray-200 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <!-- Left side -->
          <div class="flex">
            <!-- Logo -->
            <div class="flex-shrink-0 flex items-center border-r border-gray-200 pr-6">
              <%= link_to admin_root_path, class: "flex items-center group" do %>
                <div class="h-10 w-10 rounded-lg bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-md">
                  <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <span class="text-lg font-bold text-gray-900 group-hover:text-indigo-600 transition">Uni-Hub</span>
                  <span class="block text-xs text-gray-500">Admin Portal</span>
                </div>
              <% end %>
            </div>

            <!-- Navigation Links -->
            <div class="hidden sm:ml-8 sm:flex sm:space-x-1">
              <%= link_to admin_root_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium #{current_page?(admin_root_path) ? 'text-indigo-700 border-b-2 border-indigo-600' : 'text-gray-600 hover:text-gray-900 hover:border-b-2 hover:border-gray-300'} transition-all" do %>
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                Dashboard
              <% end %>

              <%= link_to admin_user_management_index_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium #{current_page?(admin_user_management_index_path) ? 'text-indigo-700 border-b-2 border-indigo-600' : 'text-gray-600 hover:text-gray-900 hover:border-b-2 hover:border-gray-300'} transition-all" do %>
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                Users
              <% end %>

              <%= link_to admin_panel_courses_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium #{current_page?(admin_panel_courses_path) ? 'text-indigo-700 border-b-2 border-indigo-600' : 'text-gray-600 hover:text-gray-900 hover:border-b-2 hover:border-gray-300'} transition-all" do %>
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
                Courses
              <% end %>

              <%= link_to admin_panel_schedules_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium #{current_page?(admin_panel_schedules_path) ? 'text-indigo-700 border-b-2 border-indigo-600' : 'text-gray-600 hover:text-gray-900 hover:border-b-2 hover:border-gray-300'} transition-all" do %>
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Schedules
              <% end %>

              <%= link_to admin_departments_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium #{current_page?(admin_departments_path) ? 'text-indigo-700 border-b-2 border-indigo-600' : 'text-gray-600 hover:text-gray-900 hover:border-b-2 hover:border-gray-300'} transition-all" do %>
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                Departments
              <% end %>
            </div>
          </div>

          <!-- Right Side -->
          <div class="flex items-center space-x-4">
            <!-- User Info -->
            <div class="hidden md:flex items-center space-x-3">
              <div class="h-9 w-9 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-md">
                <span class="text-sm font-semibold text-white"><%= current_user.email.first.upcase %></span>
              </div>
              <div class="text-sm">
                <p class="font-medium text-gray-900"><%= current_user.first_name || 'Admin' %> <%= current_user.last_name %></p>
                <p class="text-xs text-gray-500"><%= current_user.email %></p>
              </div>
            </div>
            
            <!-- Actions -->
            <div class="flex items-center space-x-2 border-l border-gray-200 pl-4">
              <%= link_to root_path, target: "_blank", class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", title: "View Student Portal" do %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              <% end %>
              
              <%= button_to destroy_admin_session_path, method: :delete, class: "inline-flex items-center px-3 py-2 border border-transparent shadow-sm text-xs font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", title: "Logout" do %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if flash.any? %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <% flash.each do |type, message| %>
          <% if type == "notice" %>
            <div class="rounded-md bg-green-50 p-4 mb-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-green-800"><%= message %></p>
                </div>
              </div>
            </div>
          <% elsif type == "alert" %>
            <div class="rounded-md bg-red-50 p-4 mb-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-red-800"><%= message %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <!-- Main Content -->
    <%= yield %>

    <!-- Footer -->
    <footer class="bg-white mt-12 border-t border-gray-200">
      <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <p class="text-center text-sm text-gray-500">
          Â© <%= Time.current.year %> Uni-Hub Admin Portal. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
