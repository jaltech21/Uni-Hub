<div class="min-h-screen bg-gray-50 py-8">
  <div class="container mx-auto px-4 max-w-6xl">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
            <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            AI Text Summarizer
          </h1>
          <p class="text-gray-600 mt-2">Paste your text below and let AI create a concise summary</p>
        </div>
        <%= link_to notes_path, class: "inline-flex items-center px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"/>
          </svg>
          Back to Notes
        <% end %>
      </div>
    </div>

    <!-- Rate Limit Status Indicator -->
    <div class="mb-6">
      <div class="bg-white rounded-xl shadow-sm border-2 <%= @rate_limit_remaining > 10 ? 'border-green-200' : @rate_limit_remaining > 5 ? 'border-yellow-200' : 'border-red-200' %> p-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="<%= @rate_limit_remaining > 10 ? 'bg-green-100' : @rate_limit_remaining > 5 ? 'bg-yellow-100' : 'bg-red-100' %> p-2 rounded-lg">
              <svg class="w-5 h-5 <%= @rate_limit_remaining > 10 ? 'text-green-600' : @rate_limit_remaining > 5 ? 'text-yellow-600' : 'text-red-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-sm font-semibold text-gray-900">AI Request Quota</h3>
              <p class="text-xs text-gray-600">
                <span class="font-bold <%= @rate_limit_remaining > 10 ? 'text-green-600' : @rate_limit_remaining > 5 ? 'text-yellow-600' : 'text-red-600' %>"><%= @rate_limit_remaining %></span> 
                of <%= @rate_limit_max %> requests remaining this minute
              </p>
            </div>
          </div>
          <div class="text-right">
            <div class="text-2xl font-bold <%= @rate_limit_remaining > 10 ? 'text-green-600' : @rate_limit_remaining > 5 ? 'text-yellow-600' : 'text-red-600' %>">
              <%= (@rate_limit_remaining.to_f / @rate_limit_max * 100).round %>%
            </div>
            <div class="text-xs text-gray-500">Available</div>
          </div>
        </div>
        <% if @rate_limit_remaining == 0 %>
          <div class="mt-3 p-3 bg-red-50 rounded-lg border border-red-200">
            <p class="text-sm text-red-800">
              <strong>⚠️ Quota exhausted.</strong> Please wait a minute before making more AI requests.
            </p>
          </div>
        <% elsif @rate_limit_remaining <= 5 %>
          <div class="mt-3 p-3 bg-yellow-50 rounded-lg border border-yellow-200">
            <p class="text-sm text-yellow-800">
              <strong>⚠️ Low quota.</strong> You're running low on AI requests for this minute.
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Input Section -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Original Text
        </h2>

        <%= form_with url: summarizations_path, method: :post, local: true, id: "summarization-form" do |f| %>
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Paste your text here (minimum 100 characters)
            </label>
            <%= text_area_tag :text, @text, 
                class: "w-full h-64 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent resize-none",
                placeholder: "Paste lecture notes, article, or any text you want to summarize...",
                id: "text-input" %>
            <div class="mt-2 flex items-center justify-between text-sm">
              <span id="char-count" class="text-gray-600">0 characters</span>
              <span id="word-count" class="text-gray-600">0 words</span>
            </div>
          </div>

          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Summary Length
            </label>
            <div class="grid grid-cols-3 gap-2">
              <label class="relative flex items-center justify-center p-3 border-2 rounded-lg cursor-pointer hover:bg-purple-50 transition-colors" data-length="short">
                <%= radio_button_tag :length, :short, false, class: "sr-only", id: "length-short" %>
                <div class="text-center">
                  <div class="font-semibold text-gray-900">Short</div>
                  <div class="text-xs text-gray-500">3-5 sentences</div>
                </div>
              </label>

              <label class="relative flex items-center justify-center p-3 border-2 border-purple-500 bg-purple-50 rounded-lg cursor-pointer transition-colors" data-length="medium">
                <%= radio_button_tag :length, :medium, true, class: "sr-only", id: "length-medium" %>
                <div class="text-center">
                  <div class="font-semibold text-gray-900">Medium</div>
                  <div class="text-xs text-gray-500">1-2 paragraphs</div>
                </div>
              </label>

              <label class="relative flex items-center justify-center p-3 border-2 rounded-lg cursor-pointer hover:bg-purple-50 transition-colors" data-length="long">
                <%= radio_button_tag :length, :long, false, class: "sr-only", id: "length-long" %>
                <div class="text-center">
                  <div class="font-semibold text-gray-900">Long</div>
                  <div class="text-xs text-gray-500">3-4 paragraphs</div>
                </div>
              </label>
            </div>
          </div>

          <button type="submit" id="summarize-btn" class="w-full px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors flex items-center justify-center gap-2 disabled:bg-gray-400 disabled:cursor-not-allowed">
            <svg class="w-5 h-5" id="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            <span id="btn-text">Generate Summary</span>
          </button>

          <!-- Loading State -->
          <div id="loading-indicator" class="hidden mt-4 p-4 bg-purple-50 border border-purple-200 rounded-lg">
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-purple-600 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
              </svg>
              <div>
                <p class="text-purple-900 font-medium">Generating summary...</p>
                <p class="text-purple-700 text-sm">This typically takes 5-15 seconds</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Output Section -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Summary
        </h2>

        <% if @summary.present? %>
          <div class="mb-4 p-4 bg-green-50 border-l-4 border-green-500 rounded">
            <div class="flex items-start gap-2">
              <svg class="w-5 h-5 text-green-600 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <p class="font-semibold text-green-800">Summary Generated!</p>
                <p class="text-sm text-green-700">
                  Compressed from <%= @word_count %> words to <%= @summary_word_count %> words 
                  (<%= @compression_ratio %>% of original)
                </p>
              </div>
            </div>
          </div>

          <div class="prose prose-sm max-w-none mb-6">
            <div class="p-4 bg-gray-50 rounded-lg border border-gray-200">
              <%= simple_format(@summary) %>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex gap-2">
            <button type="button" onclick="copyToClipboard()" class="flex-1 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
              </svg>
              Copy
            </button>

            <button type="button" onclick="showSaveModal()" class="flex-1 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"/>
              </svg>
              Save to Notes
            </button>
          </div>
        <% else %>
          <div class="h-64 flex items-center justify-center text-center text-gray-400">
            <div>
              <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <p class="text-lg">Your summary will appear here</p>
              <p class="text-sm mt-2">Paste text and click "Generate Summary"</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Tips Section -->
    <div class="mt-8 bg-gradient-to-r from-blue-50 to-indigo-50 border-l-4 border-blue-500 rounded-r-lg p-6 shadow-md">
      <h3 class="text-lg font-bold text-blue-900 mb-4 flex items-center gap-2">
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
        Tips for Best Results
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-blue-900"><strong>Complete sentences:</strong> Use full paragraphs for better summaries</span>
        </div>
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-blue-900"><strong>Longer is better:</strong> 500+ words produce more accurate results</span>
        </div>
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-blue-900"><strong>Try different lengths:</strong> Short for quick reads, long for detail</span>
        </div>
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-blue-900"><strong>Save to notes:</strong> Keep important summaries for later reference</span>
        </div>
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-purple-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
          </svg>
          <span class="text-blue-900"><strong>Rate limit:</strong> 50 requests per minute per user</span>
        </div>
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-purple-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"/>
          </svg>
          <span class="text-blue-900"><strong>Fast processing:</strong> Most summaries complete in 5-15 seconds</span>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Save to Note Modal -->
<div id="save-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
  <div class="bg-white rounded-lg max-w-md w-full p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-4">Save Summary to Notes</h3>
    
    <%= form_with url: save_to_note_summarizations_path, method: :post, local: true do |f| %>
      <%= hidden_field_tag :summary, @summary %>
      <%= hidden_field_tag :original_text, @text %>
      
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Note Title</label>
        <%= text_field_tag :title, "Summary - #{Time.current.strftime('%B %d, %Y')}", 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div class="mb-6">
        <label class="flex items-center gap-2 cursor-pointer">
          <%= check_box_tag :include_original, "1", false, class: "rounded border-gray-300 text-purple-600 focus:ring-purple-500" %>
          <span class="text-sm text-gray-700">Include original text in note</span>
        </label>
      </div>

      <div class="flex gap-2">
        <button type="button" onclick="hideSaveModal()" class="flex-1 px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition-colors">
          Cancel
        </button>
        <button type="submit" class="flex-1 px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors">
          Save Note
        </button>
      </div>
    <% end %>
  </div>
</div>

<script>
  // Character and word count
  const textInput = document.getElementById('text-input');
  const charCount = document.getElementById('char-count');
  const wordCount = document.getElementById('word-count');
  const summarizeBtn = document.getElementById('summarize-btn');

  function updateCounts() {
    const text = textInput.value;
    const chars = text.length;
    const words = text.trim().split(/\s+/).filter(w => w.length > 0).length;
    
    charCount.textContent = `${chars} characters`;
    wordCount.textContent = `${words} words`;
    
    // Enable/disable button based on text length
    if (chars < 100) {
      summarizeBtn.disabled = true;
      charCount.classList.add('text-red-600');
    } else {
      summarizeBtn.disabled = false;
      charCount.classList.remove('text-red-600');
    }
  }

  textInput.addEventListener('input', updateCounts);
  updateCounts();

  // Length selector styling
  document.querySelectorAll('[data-length]').forEach(label => {
    label.addEventListener('click', function() {
      document.querySelectorAll('[data-length]').forEach(l => {
        l.classList.remove('border-purple-500', 'bg-purple-50');
        l.classList.add('border-gray-200');
      });
      this.classList.remove('border-gray-200');
      this.classList.add('border-purple-500', 'bg-purple-50');
    });
  });

  // Form submission loading state
  document.getElementById('summarization-form').addEventListener('submit', function(e) {
    const text = textInput.value;
    if (text.length < 100) {
      e.preventDefault();
      return;
    }
    
    // Show loading state
    summarizeBtn.disabled = true;
    document.getElementById('btn-text').textContent = 'Generating...';
    document.getElementById('btn-icon').classList.add('animate-spin');
    
    const loadingIndicator = document.getElementById('loading-indicator');
    if (loadingIndicator) {
      loadingIndicator.classList.remove('hidden');
    }
  });

  // Copy to clipboard
  function copyToClipboard() {
    const summary = `<%= j(@summary) %>`;
    navigator.clipboard.writeText(summary).then(() => {
      alert('Summary copied to clipboard!');
    });
  }

  // Modal functions
  function showSaveModal() {
    document.getElementById('save-modal').classList.remove('hidden');
  }

  function hideSaveModal() {
    document.getElementById('save-modal').classList.add('hidden');
  }
</script>
